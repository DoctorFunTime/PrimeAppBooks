<Window
    x:Class="PrimeAppBooks.Views.Windows.WndMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrimeAppBooks.Views.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Message"
    Width="300"
    Height="Auto"
    MinWidth="300"
    MaxWidth="600"
    AllowsTransparency="True"
    Background="Transparent"
    RenderOptions.BitmapScalingMode="HighQuality"
    SizeToContent="WidthAndHeight"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Merge the Styles.xaml resource dictionary  -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/PopupAnimations.xaml" />
                <ResourceDictionary Source="/Resources/OptimizedStyles.xaml" />
                <ResourceDictionary Source="/Resources/PerformanceOptimizedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <!--  Shadow Border  -->
        <Border
            Margin="5"
            Panel.ZIndex="0"
            Background="#40000000"
            CornerRadius="8">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                    <TranslateTransform />
                </TransformGroup>
            </Border.RenderTransform>
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource BounceInAnimation}" />
                </EventTrigger>
            </Border.Triggers>
        </Border>

        <!--  Main Content Grid with Drop Shadow Effect  -->
        <Grid Panel.ZIndex="1">
            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="16"
                    Direction="315"
                    Opacity="0.6"
                    RenderingBias="Quality"
                    ShadowDepth="4"
                    Color="#80000000" />
            </Grid.Effect>

            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <TranslateTransform />
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.Triggers>
                <!--  Trigger to start the animation when the popup is opened  -->
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource BounceInAnimation}" />
                </EventTrigger>
            </Grid.Triggers>

            <!--  Optimized Background  -->
            <Rectangle Fill="{StaticResource OptimizedBackgroundBrush}" />

            <!--  Draggable area and content  -->
            <Border
                BorderBrush="White"
                BorderThickness="0"
                CornerRadius="8">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="16*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Grid.ColumnSpan="4"
                        Height="Auto"
                        Padding="0"
                        CornerRadius="8,8,0,0"
                        MouseLeftButtonDown="Border_MouseLeftButtonDown">
                        <Border.Background>
                            <!--  Lighter gradient for the draggable area  -->
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <!--  Lighter dark blue at the top  -->
                                <GradientStop Offset="0" Color="#FF283D4C" />
                                <!--  Intermediate lighter blue  -->
                                <GradientStop Offset="0.5" Color="#FF2A3F4E" />
                                <!--  Matching the main gradient  -->
                                <GradientStop Offset="0.8" Color="#FF2A3F4E" />
                                <!--  Fading starts here  -->
                                <GradientStop Offset="1" Color="#002A3F4E" />
                                <!--  Fully transparent at the end  -->
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Message Text Column (Expands)  -->
                            <TextBlock
                                Grid.Column="0"
                                Margin="10,0,0,0"
                                Padding="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Century Gothic"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Title, Mode=TwoWay}"
                                TextTrimming="CharacterEllipsis" />

                            <StackPanel
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <Button
                                    MinWidth="30"
                                    MinHeight="30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Command="{Binding MinimizeCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                    Style="{StaticResource ModernButtonStyle}">
                                    <materialDesign:PackIcon
                                        Width="15"
                                        Height="15"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Kind="WindowMinimize" />
                                </Button>

                                <Button
                                    MinWidth="30"
                                    MinHeight="30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Command="{Binding MaximizeCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                    Style="{StaticResource ModernButtonStyle}">
                                    <materialDesign:PackIcon
                                        Width="15"
                                        Height="15"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Kind="WindowMaximize" />
                                </Button>

                                <Button
                                    MinWidth="30"
                                    MinHeight="30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Command="{Binding CloseCommand}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                    Style="{StaticResource ModernButtonStyle}">
                                    <materialDesign:PackIcon
                                        Width="15"
                                        Height="15"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Kind="WindowClose" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Icon Column (Auto-sized)  -->
                        <materialDesign:PackIcon
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Width="Auto"
                            Height="Auto"
                            MaxWidth="70"
                            MaxHeight="70"
                            Margin="0,0,15,20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{Binding IconColor}"
                            Kind="{Binding IconType, Mode=TwoWay}" />

                        <!--  Message Text Column (Expands)  -->
                        <TextBox
                            Grid.Column="1"
                            Padding="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontFamily="Century Gothic"
                            FontSize="12"
                            Foreground="{Binding IconColor}"
                            IsReadOnly="True"
                            Text="{Binding Message, Mode=TwoWay}"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />

                        <StackPanel
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Button
                                Width="Auto"
                                Height="Auto"
                                MinWidth="50"
                                MinHeight="20"
                                MaxWidth="100"
                                MaxHeight="35"
                                Margin="10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Command="{Binding CopyMessageCommand}"
                                Content="Copy"
                                FontFamily="Century gothic"
                                FontSize="12"
                                Style="{StaticResource ModernActionButton}" />
                            <Button
                                Width="Auto"
                                Height="Auto"
                                MinWidth="50"
                                MinHeight="20"
                                MaxWidth="100"
                                MaxHeight="35"
                                Margin="10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Command="{Binding OkCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Content="Ok"
                                FontFamily="Century gothic"
                                FontSize="12"
                                Style="{StaticResource ModernActionButton}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
