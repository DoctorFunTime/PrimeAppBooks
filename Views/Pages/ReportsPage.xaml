<Page x:Class="PrimeAppBooks.Views.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Financial Reports" Foreground="White" FontSize="24" FontWeight="Light" />
            <Button Content="+ Generate Report" Margin="20,0,0,0" Style="{StaticResource ModernButtonStyle}" />
        </StackPanel>

        <!-- Reports Grid -->
        <Border Style="{StaticResource ModernCardStyle}" Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Available Reports" Foreground="White" FontSize="16" Margin="0,0,0,15" />

                <!-- Report Buttons -->
                <Button Content="📄 Balance Sheet" Style="{StaticResource ModernButtonStyle}"
                       Command="{Binding GenerateBalanceSheetCommand}" />
                <Button Content="📄 Income Statement" Style="{StaticResource ModernButtonStyle}"
                       Command="{Binding GenerateIncomeStatementCommand}" />
                <Button Content="📄 Cash Flow Statement" Style="{StaticResource ModernButtonStyle}"
                       Command="{Binding GenerateCashFlowCommand}" />
                <Button Content="📄 Trial Balance" Style="{StaticResource ModernButtonStyle}"
                       Command="{Binding GenerateTrialBalanceCommand}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>