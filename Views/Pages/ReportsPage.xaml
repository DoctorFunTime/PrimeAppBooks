<Page
    x:Class="PrimeAppBooks.Views.Pages.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PrimeAppBooks.Conveters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    Background="Transparent"
    mc:Ignorable="d">

    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header Section Matching Chart of Accounts  -->
            <Border
                Grid.Row="0"
                Margin="0,0,0,20"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource WelcomeTitleText}" Text="Financial Reports" />
                        <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Generate, print, and manage your financial reports" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button
                            Margin="5,0"
                            Command="{Binding GenerateReportCommand}"
                            Content="📄 Generate Report"
                            Style="{StaticResource ModernActionButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding PrintAllCommand}"
                            Content="🖨️ Print All"
                            Style="{StaticResource ModernSecondaryButton}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Date Range Filter Section  -->
            <Border
                Grid.Row="1"
                Margin="0,0,0,20"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center"
                        Style="{StaticResource SectionHeaderText}"
                        Text="📅 Date Range" />

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <DatePicker
                            Width="120"
                            Margin="0,0,10,0"
                            SelectedDate="{Binding StartDate}"
                            Style="{StaticResource CompactDatePickerStyle}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="to" />
                        <DatePicker
                            Width="120"
                            Margin="10,0,10,0"
                            SelectedDate="{Binding EndDate}"
                            Style="{StaticResource CompactDatePickerStyle}" />
                        <ComboBox
                            Width="120"
                            ItemsSource="{Binding DatePresets}"
                            SelectedItem="{Binding SelectedDatePreset}"
                            Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="Custom" />
                            <ComboBoxItem Content="This Month" />
                            <ComboBoxItem Content="Last Month" />
                            <ComboBoxItem Content="This Quarter" />
                            <ComboBoxItem Content="This Year" />
                        </ComboBox>
                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        Command="{Binding ApplyDateFilterCommand}"
                        Content="Apply"
                        Style="{StaticResource ModernActionButton}" />
                </Grid>
            </Border>

            <!--  Main Content  -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--  Report Types  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,15,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,15"
                            Style="{StaticResource SectionHeaderText}"
                            Text="📋 Report Types" />

                        <!--  Standard Reports  -->
                        <Expander Margin="0,0,0,10" IsExpanded="True">
                            <Expander.Header>
                                <TextBlock
                                    Foreground="Black"
                                    Style="{StaticResource DetailHeaderText}"
                                    Text="📄 Financial Statements" />
                            </Expander.Header>
                            <StackPanel>
                                <Button
                                    Margin="0,5"
                                    Command="{Binding GenerateBalanceSheetCommand}"
                                    Content="Balance Sheet"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,5"
                                    Command="{Binding GenerateIncomeStatementCommand}"
                                    Content="Income Statement"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,5"
                                    Command="{Binding GenerateCashFlowCommand}"
                                    Content="Cash Flow Statement"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,5"
                                    Command="{Binding GenerateTrialBalanceCommand}"
                                    Content="Trial Balance"
                                    Style="{StaticResource ModernSecondaryButton}" />
                            </StackPanel>
                        </Expander>

                        <!--  Management Reports  -->
                        <Expander Margin="0,0,0,10">
                            <Expander.Header>
                                <TextBlock
                                    Foreground="Black"
                                    Style="{StaticResource DetailHeaderText}"
                                    Text="📊 Management Reports" />
                            </Expander.Header>
                            <StackPanel>
                                <Button
                                    Margin="0,5"
                                    Content="A/R Aging Summary"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,5"
                                    Content="A/P Aging Summary"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,5"
                                    Content="Budget vs Actual"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,5"
                                    Content="Profit and Loss"
                                    Style="{StaticResource ModernSecondaryButton}" />
                            </StackPanel>
                        </Expander>

                        <!--  Tax Reports  -->
                        <Expander Margin="0,0,0,10">
                            <Expander.Header>
                                <TextBlock
                                    Foreground="Black"
                                    Style="{StaticResource DetailHeaderText}"
                                    Text="🧾 Tax Reports" />
                            </Expander.Header>
                            <StackPanel>
                                <Button
                                    Margin="0,5"
                                    Content="VAT Report"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,5"
                                    Content="Tax Summary"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,5"
                                    Content="1099 Preparation"
                                    Style="{StaticResource ModernSecondaryButton}" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>

                <!--  Report Configuration & Recent  -->
                <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Report Configuration  -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,10"
                                Style="{StaticResource SectionHeaderText}"
                                Text="⚙️ Report Configuration" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ComboBox
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    ItemsSource="{Binding OutputFormats}"
                                    SelectedItem="{Binding SelectedFormat}"
                                    Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="PDF" />
                                    <ComboBoxItem Content="Excel" />
                                    <ComboBoxItem Content="Print" />
                                </ComboBox>

                                <StackPanel
                                    Grid.Column="1"
                                    Margin="0,0,10,0"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="Copies:" />
                                    <TextBox
                                        Width="40"
                                        Style="{StaticResource ModernTextBoxStyle}"
                                        Text="{Binding Copies}"
                                        TextAlignment="Center" />
                                </StackPanel>

                                <Button
                                    Grid.Column="2"
                                    Command="{Binding GenerateSelectedCommand}"
                                    Content="Generate"
                                    Style="{StaticResource ModernActionButton}" />
                            </Grid>
                        </StackPanel>

                        <!--  Recent Reports  -->
                        <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,10"
                                    Style="{StaticResource SectionHeaderText}"
                                    Text="🕐 Recent Reports" />

                                <ListView Height="300" ItemsSource="{Binding RecentReports}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Margin="0,2"
                                                Padding="10"
                                                Background="#2A2A2A"
                                                CornerRadius="8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        Margin="0,0,10,0"
                                                        FontSize="16"
                                                        Text="{Binding Icon}" />
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            Text="{Binding Name}" />
                                                        <TextBlock
                                                            FontSize="12"
                                                            Foreground="#AAAAAA"
                                                            Text="{Binding GeneratedDate, StringFormat='Generated: {0:MMM dd, yyyy}'}" />
                                                    </StackPanel>
                                                    <TextBlock
                                                        Grid.Column="2"
                                                        Margin="10,0"
                                                        VerticalAlignment="Center"
                                                        Foreground="#AAAAAA"
                                                        Text="{Binding PageCount, StringFormat={}{0} pages}" />
                                                    <Button
                                                        Grid.Column="3"
                                                        Command="{Binding ViewCommand}"
                                                        Content="📄"
                                                        Style="{StaticResource ModernIconButton}" />
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>