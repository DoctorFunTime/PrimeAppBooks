<base:BaseAnimatedPage
    x:Class="PrimeAppBooks.Views.Pages.GeneralLedgerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:PrimeAppBooks.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:PrimeAppBooks.ViewModels.Pages"
    xmlns:views="clr-namespace:PrimeAppBooks.Views.Controls"
    d:DataContext="{d:DesignInstance Type=pages:GeneralLedgerPageViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,20"
            Style="{StaticResource ModernCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource WelcomeTitleText}" Text="ðŸ“– General Ledger" />
                    <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Comprehensive view of all transactions across all accounts" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <DatePicker
                        Width="120"
                        Margin="0,0,10,0"
                        SelectedDate="{Binding StartDate}"
                        Style="{StaticResource CompactDatePickerStyle}" />
                    <TextBlock
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        Text="-" />
                    <DatePicker
                        Width="120"
                        Margin="0,0,20,0"
                        SelectedDate="{Binding EndDate}"
                        Style="{StaticResource CompactDatePickerStyle}" />

                    <Button
                        Command="{Binding NavigateBackCommand}"
                        Content="â† Back"
                        Style="{StaticResource ModernSecondaryButton}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Transactions Grid  -->
        <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}">
            <DataGrid
                Margin="2"
                GridLinesVisibility="None"
                IsReadOnly="True"
                ItemsSource="{Binding Transactions}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionMode="Single"
                Style="{StaticResource ModernDataGridStyle}">

                <DataGrid.RowStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                        <Setter Property="Height" Value="40" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2A4A7B" />
                                <Setter Property="BorderBrush" Value="#4472C4" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E3A5F" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.ColumnHeaderStyle>
                    <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="#FF4472C4" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontFamily" Value="Segoe UI" />
                        <Setter Property="FontSize" Value="12" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Height" Value="35" />
                        <Setter Property="Background" Value="#1E1E1E" />
                        <Setter Property="BorderBrush" Value="#3A3A3A" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding LineDate, StringFormat=d}"
                        Header="Date" />

                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding JournalEntry.JournalNumber}"
                        Header="Journal #" />

                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Reference}"
                        Header="Reference" />

                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding ChartOfAccount.AccountName}"
                        Header="Account">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                <Setter Property="ToolTip" Value="{Binding ChartOfAccount.AccountName}" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Description}"
                        Header="Description">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="ToolTip" Value="{Binding Description}" />
                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="90"
                        Binding="{Binding DebitAmount, StringFormat=N2}"
                        Header="Debit">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="90"
                        Binding="{Binding CreditAmount, StringFormat=N2}"
                        Header="Credit">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Currency.CurrencyCode}"
                        Header="Currency" />

                    <DataGridTextColumn
                        Width="70"
                        Binding="{Binding ExchangeRate, StringFormat=N4}"
                        Header="Ex. Rate" />

                    <DataGridTextColumn
                        Width="90"
                        Binding="{Binding ForeignDebitAmount, StringFormat=N2}"
                        Header="F.Debit">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="90"
                        Binding="{Binding ForeignCreditAmount, StringFormat=N2}"
                        Header="F.Credit">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!--  Summary Footer  -->
        <Border
            Grid.Row="2"
            Margin="0,20,0,0"
            Style="{StaticResource ModernCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{StaticResource ActivityAmountText}"
                    Text="Period Totals" />

                <StackPanel
                    Grid.Column="1"
                    Margin="0,0,40,0"
                    Orientation="Horizontal">
                    <TextBlock
                        Opacity="0.7"
                        Style="{StaticResource ActivityAmountText}"
                        Text="Total Debits: " />
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource ActivityAmountText}"
                        Text="{Binding TotalDebits, StringFormat=N2}" />
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    Margin="0,0,40,0"
                    Orientation="Horizontal">
                    <TextBlock
                        Opacity="0.7"
                        Style="{StaticResource ActivityAmountText}"
                        Text="Total Credits: " />
                    <TextBlock
                        FontWeight="SemiBold"
                        Style="{StaticResource ActivityAmountText}"
                        Text="{Binding TotalCredits, StringFormat=N2}" />
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock
                        Opacity="0.7"
                        Style="{StaticResource ActivityAmountText}"
                        Text="Net Change: " />
                    <TextBlock
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryBrush}"
                        Style="{StaticResource ActivityAmountText}"
                        Text="{Binding NetChange, StringFormat=N2}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Loading Overlay  -->
        <views:LoadingOverlay
            Grid.RowSpan="3"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</base:BaseAnimatedPage>