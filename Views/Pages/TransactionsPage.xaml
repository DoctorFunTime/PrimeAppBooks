<Page
    x:Class="PrimeAppBooks.Views.Pages.TransactionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:PrimeAppBooks.Conveters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:pages="clr-namespace:PrimeAppBooks.ViewModels.Pages" d:DataContext="{d:DesignInstance Type=pages:TransactionsPageViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    Background="Transparent"
    mc:Ignorable="d">

    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header Section with Quick Actions  -->
            <Border
                Grid.Row="0"
                Margin="0,0,0,20"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource WelcomeTitleText}" Text="Journal Entries &amp; Transactions" />
                        <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Manage your accounting entries, drafts, and posted transactions" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button
                            Margin="5,0"
                            Command="{Binding NavigateToJournalPageCommand}"
                            Content="📝 New Journal Entry"
                            Style="{StaticResource ModernActionButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding QuickEntryCommand}"
                            Content="🔄 Quick Entry"
                            Style="{StaticResource ModernActionButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding ImportTransactionsCommand}"
                            Content="📥 Import"
                            Style="{StaticResource ModernSecondaryButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding ExportTransactionsCommand}"
                            Content="📊 Export"
                            Style="{StaticResource ModernSecondaryButton}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Quick Stats & Status Overview  -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Summary Cards  -->
                <UniformGrid Grid.Column="0" Columns="4">
                    <!--  Draft Entries  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource DraftHeaderText}" Text="📝 Draft Entries" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding DraftEntriesCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Ready for review" />
                        </StackPanel>
                    </Border>

                    <!--  Posted Today  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource PostedHeaderText}" Text="✅ Posted Today" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding PostedTodayCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="{Binding PostedTodayAmount, StringFormat=C}" />
                        </StackPanel>
                    </Border>

                    <!--  This Month  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource MonthlyHeaderText}" Text="📅 This Month" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding MonthlyTransactionCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="{Binding MonthlyAmount, StringFormat=C}" />
                        </StackPanel>
                    </Border>

                    <!--  Balance Check  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource BalanceHeaderText}" Text="⚖️ Balance Status" />
                            <TextBlock
                                Foreground="{Binding BalanceStatusColor}"
                                Style="{StaticResource CardValueText}"
                                Text="{Binding BalanceStatus}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="{Binding BalanceDifference, StringFormat=C}" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!--  Pending Actions Panel  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <Grid>
                            <TextBlock
                                HorizontalAlignment="Left"
                                Style="{StaticResource SectionHeaderText}"
                                Text="⚡ Pending Actions" />
                            <TextBlock
                                HorizontalAlignment="Right"
                                Style="{StaticResource AlertCountText}"
                                Text="{Binding PendingActionsCount}" />
                        </Grid>

                        <ScrollViewer
                            Height="120"
                            Margin="0,10,0,0"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding PendingActions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5" Style="{StaticResource PendingActionItemBorder}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Style="{StaticResource ActionTypeText}" Text="{Binding ActionType}" />
                                                    <TextBlock Style="{StaticResource ActionDescriptionText}" Text="{Binding Description}" />
                                                </StackPanel>

                                                <Button
                                                    Grid.Column="1"
                                                    Command="{Binding DataContext.HandlePendingActionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Content="→"
                                                    Style="{StaticResource ModernMiniButton}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Enhanced Filters & View Options  -->
            <Border
                Grid.Row="2"
                Margin="0,0,0,20"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Filter Header with View Toggle  -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource SectionHeaderText}"
                            Text="🔍 Filters &amp; Search" />

                        <!--  View Toggle  -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource FilterLabelText}"
                                Text="View:" />
                            <ToggleButton
                                x:Name="ShowAllToggle"
                                Content="All"
                                IsChecked="{Binding ShowAllTransactions}"
                                Style="{StaticResource FilterToggleButton}" />
                            <ToggleButton
                                x:Name="ShowDraftsToggle"
                                Margin="5,0"
                                Content="Drafts"
                                IsChecked="{Binding ShowDraftsOnly}"
                                Style="{StaticResource FilterToggleButton}" />
                            <ToggleButton
                                x:Name="ShowPostedToggle"
                                Content="Posted"
                                IsChecked="{Binding ShowPostedOnly}"
                                Style="{StaticResource FilterToggleButton}" />
                        </StackPanel>
                    </Grid>

                    <!--  Filter Controls  -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Search Box  -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="Search Description/Reference" />
                            <hc:TextBox Style="{StaticResource HandyModernTextBox}" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Date Range  -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="From Date" />
                            <DatePicker
                                Margin="0,5,0,0"
                                SelectedDate="{Binding StartDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="To Date" />
                            <DatePicker
                                Margin="0,5,0,0"
                                SelectedDate="{Binding EndDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>

                        <!--  Account Filter  -->
                        <StackPanel Grid.Column="3" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="Account" />
                            <ComboBox
                                Margin="0,5,0,0"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding AccountFilters}"
                                SelectedValue="{Binding SelectedAccountId}"
                                SelectedValuePath="Id"
                                Style="{StaticResource ModernComboBox}" />
                        </StackPanel>

                        <!--  Filter Actions  -->
                        <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
                            <Button
                                Margin="0,0,0,5"
                                Command="{Binding ApplyFiltersCommand}"
                                Content="Apply"
                                Style="{StaticResource ModernActionButton}" />
                            <Button
                                Command="{Binding ClearFiltersCommand}"
                                Content="Clear"
                                Style="{StaticResource ModernSecondaryButton}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!--  Main Content Area  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Transactions List/Grid  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <!--  List Header  -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource SectionHeaderText}"
                                Text="📋 Journal Entries" />

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ComboBox
                                    Width="120"
                                    Margin="0,0,10,0"
                                    SelectedIndex="0"
                                    Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="25 per page" />
                                    <ComboBoxItem Content="50 per page" />
                                    <ComboBoxItem Content="100 per page" />
                                </ComboBox>
                                <Button
                                    Command="{Binding RefreshCommand}"
                                    Content="🔄"
                                    Style="{StaticResource ModernRefreshButton}" />
                            </StackPanel>
                        </Grid>

                        <!--  Transactions DataGrid with Modern Styling  -->
                        <Border Style="{StaticResource ModernDataGridContainer}">
                            <DataGrid
                                MaxHeight="600"
                                AutoGenerateColumns="False"
                                CellStyle="{StaticResource ModernCellStyle}"
                                ColumnHeaderStyle="{StaticResource ModernColumnHeaderStyle}"
                                ItemsSource="{Binding FilteredTransactions}"
                                RowHeight="48"
                                RowStyle="{StaticResource ModernRowStyle}"
                                SelectedItem="{Binding SelectedTransaction}"
                                SelectionMode="Single"
                                Style="{StaticResource ModernDataGridStyle}">

                                <DataGrid.Resources>
                                    <!--  Apply Modern ScrollBar Style  -->
                                    <Style BasedOn="{StaticResource ModernScrollBarStyle}" TargetType="{x:Type ScrollBar}" />
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <!--  Status Indicator  -->
                                    <DataGridTemplateColumn
                                        Width="40"
                                        CanUserResize="False"
                                        Header="">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Width="12"
                                                    Height="12"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Background="{Binding Status, Converter={StaticResource StatusIndicatorConverter}}"
                                                    CornerRadius="6">
                                                    <Border.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="3"
                                                            Opacity="0.3"
                                                            ShadowDepth="1"
                                                            Color="Black" />
                                                    </Border.Effect>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!--  Date  -->
                                    <DataGridTextColumn
                                        Width="120"
                                        Binding="{Binding TransactionDate, StringFormat='MMM dd, yyyy'}"
                                        Header="Date">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontWeight" Value="Normal" />
                                                <Setter Property="Foreground" Value="#2C3E50" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Reference/Number  -->
                                    <DataGridTextColumn
                                        Width="110"
                                        Binding="{Binding ReferenceNumber}"
                                        Header="Reference">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontWeight" Value="Medium" />
                                                <Setter Property="Foreground" Value="#34495E" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Description  -->
                                    <DataGridTextColumn
                                        Width="*"
                                        MinWidth="250"
                                        Binding="{Binding Description}"
                                        Header="Description">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontWeight" Value="Normal" />
                                                <Setter Property="Foreground" Value="#2C3E50" />
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                <Setter Property="ToolTip" Value="{Binding Description}" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Accounts Involved  -->
                                    <DataGridTextColumn
                                        Width="180"
                                        Binding="{Binding AccountsSummary}"
                                        Header="Accounts">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontSize" Value="12" />
                                                <Setter Property="Foreground" Value="#7F8C8D" />
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                <Setter Property="ToolTip" Value="{Binding AccountsSummary}" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Amount  -->
                                    <DataGridTextColumn
                                        Width="120"
                                        Binding="{Binding TotalAmount, StringFormat=C}"
                                        Header="Amount">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontSize" Value="13" />
                                                <Setter Property="Foreground" Value="#27AE60" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TotalAmount, Converter={StaticResource NegativeAmountConverter}}" Value="True">
                                                        <Setter Property="Foreground" Value="#E74C3C" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Status Badge  -->
                                    <DataGridTemplateColumn Width="90" Header="Status">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding Status, Converter={StaticResource StatusColorConverter}}" Style="{StaticResource TransactionStatusBadge}">
                                                    <Border.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="4"
                                                            Opacity="0.2"
                                                            ShadowDepth="1"
                                                            Color="Black" />
                                                    </Border.Effect>
                                                    <TextBlock Style="{StaticResource StatusBadgeText}" Text="{Binding Status}" />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!--  Actions  -->
                                    <DataGridTemplateColumn Width="160" Header="Actions">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal">

                                                    <!--  Edit Button  -->
                                                    <Button
                                                        Margin="0,0,4,0"
                                                        Command="{Binding DataContext.EditTransactionCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource ModernIconButton}"
                                                        ToolTip="Edit Transaction">
                                                        <Path
                                                            Width="14"
                                                            Height="14"
                                                            Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                                            Fill="#3498DB"
                                                            Stretch="Uniform" />
                                                    </Button>

                                                    <!--  Post/Unpost Button  -->
                                                    <Button
                                                        Margin="0,0,4,0"
                                                        Command="{Binding DataContext.TogglePostStatusCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        IsEnabled="{Binding CanTogglePostStatus}"
                                                        Style="{StaticResource ModernIconButton}"
                                                        ToolTip="{Binding PostButtonTooltip}">
                                                        <Path
                                                            Width="14"
                                                            Height="14"
                                                            Data="{Binding PostButtonIcon, Converter={StaticResource IconPathConverter}}"
                                                            Stretch="Uniform">
                                                            <Path.Style>
                                                                <Style TargetType="Path">
                                                                    <Setter Property="Fill" Value="#27AE60" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Draft">
                                                                            <Setter Property="Fill" Value="#F39C12" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Path.Style>
                                                        </Path>
                                                    </Button>

                                                    <!--  View Details Button  -->
                                                    <Button
                                                        Margin="0,0,4,0"
                                                        Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource ModernIconButton}"
                                                        ToolTip="View Transaction Details">
                                                        <Path
                                                            Width="14"
                                                            Height="14"
                                                            Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"
                                                            Fill="#9B59B6"
                                                            Stretch="Uniform" />
                                                    </Button>

                                                    <!--  Delete Button (only for drafts)  -->
                                                    <Button
                                                        Command="{Binding DataContext.DeleteDraftCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                        CommandParameter="{Binding}"
                                                        Style="{StaticResource ModernIconButton}"
                                                        ToolTip="Delete Draft"
                                                        Visibility="{Binding IsDraft, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <Path
                                                            Width="14"
                                                            Height="14"
                                                            Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                            Fill="#E74C3C"
                                                            Stretch="Uniform" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <!--  Pagination  -->
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource FilterLabelText}"
                                Text="{Binding ResultsSummary}" />

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button
                                    Command="{Binding PreviousPageCommand}"
                                    Content="←"
                                    IsEnabled="{Binding HasPreviousPage}"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <TextBlock
                                    Margin="15,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource FilterLabelText}"
                                    Text="{Binding CurrentPageInfo}" />
                                <Button
                                    Command="{Binding NextPageCommand}"
                                    Content="→"
                                    IsEnabled="{Binding HasNextPage}"
                                    Style="{StaticResource ModernSecondaryButton}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Transaction Details & Quick Actions Panel  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderText}" Text="📋 Selected Entry Details" />

                        <!--  Transaction Details (shown when item selected)  -->
                        <StackPanel Margin="0,10,0,0" Visibility="{Binding SelectedTransaction, Converter={StaticResource NullToVisibilityConverter}}">
                            <!--  Entry Header Info  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailHeaderText}" Text="{Binding SelectedTransaction.ReferenceNumber}" />
                                    <TextBlock Style="{StaticResource DetailSubText}" Text="{Binding SelectedTransaction.TransactionDate, StringFormat='MMM dd, yyyy'}" />
                                    <Border
                                        Margin="0,5,0,0"
                                        HorizontalAlignment="Left"
                                        Background="{Binding SelectedTransaction.Status, Converter={StaticResource StatusColorConverter}}"
                                        Style="{StaticResource TransactionStatusBadge}">
                                        <TextBlock Style="{StaticResource StatusBadgeText}" Text="{Binding SelectedTransaction.Status}" />
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!--  Description  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Description" />
                                    <TextBlock
                                        Style="{StaticResource DetailValueText}"
                                        Text="{Binding SelectedTransaction.Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  Journal Lines Preview  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Account Lines" />
                                    <ItemsControl Margin="0,5,0,0" ItemsSource="{Binding SelectedTransaction.JournalLines}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        Grid.Column="0"
                                                        Style="{StaticResource DetailSubText}"
                                                        Text="{Binding AccountName}" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        Style="{StaticResource DetailSubText}"
                                                        Text="{Binding Amount, StringFormat=C}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!--  Quick Actions for Selected Entry  -->
                            <StackPanel Margin="0,10,0,0">
                                <Button
                                    Margin="0,0,0,5"
                                    Command="{Binding EditTransactionCommand}"
                                    CommandParameter="{Binding SelectedTransaction}"
                                    Content="📝 Edit Entry"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,0,0,5"
                                    Command="{Binding DuplicateTransactionCommand}"
                                    CommandParameter="{Binding SelectedTransaction}"
                                    Content="📋 Duplicate"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Command="{Binding TogglePostStatusCommand}"
                                    CommandParameter="{Binding SelectedTransaction}"
                                    Content="🔄 Post Entry"
                                    Style="{StaticResource ModernSecondaryButton}"
                                    Visibility="{Binding SelectedTransaction.IsDraft, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Empty State  -->
                        <StackPanel
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Visibility="{Binding SelectedTransaction, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                            <TextBlock
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                FontSize="48"
                                Opacity="0.3"
                                Text="📋" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{StaticResource DetailSubText}"
                                Text="Select an entry to view details" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>