<base:BaseAnimatedPage
    x:Class="PrimeAppBooks.Views.Pages.TransactionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:PrimeAppBooks.Views.Pages"
    xmlns:converters="clr-namespace:PrimeAppBooks.Conveters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:PrimeAppBooks.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=pages:TransactionsPageViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    Background="Transparent"
    mc:Ignorable="d">

    <base:BaseAnimatedPage.Resources>
        <converters:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter" />
        <converters:StatusIndicatorConverter x:Key="StatusIndicatorConverter" />
        <converters:NegativeAmountConverter x:Key="NegativeAmountConverter" />
        <converters:StatusColorConverter x:Key="StatusColorConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </base:BaseAnimatedPage.Resources>

    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header Section with Quick Actions  -->
            <Border
                Grid.Row="0"
                Margin="0,0,0,20"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource WelcomeTitleText}" Text="Journal Entries &amp; Transactions" />
                        <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Manage your accounting entries, drafts, and posted transactions" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button
                            Margin="5,0"
                            Command="{Binding NavigateToJournalPageCommand}"
                            Content="📝 New Journal Entry"
                            Style="{StaticResource ModernActionButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding QuickEntryCommand}"
                            Content="🔄 Quick Entry"
                            Style="{StaticResource ModernActionButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding ImportTransactionsCommand}"
                            Content="📥 Import"
                            Style="{StaticResource ModernSecondaryButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding ExportTransactionsCommand}"
                            Content="📊 Export"
                            Style="{StaticResource ModernSecondaryButton}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Quick Stats & Status Overview  -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Summary Cards  -->
                <UniformGrid Grid.Column="0" Columns="4">
                    <!--  Draft Entries  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource DraftHeaderText}" Text="📝 Draft Entries" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding DraftEntriesCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Ready for review" />
                        </StackPanel>
                    </Border>

                    <!--  Posted Today  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource PostedHeaderText}" Text="✅ Posted Today" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding PostedTodayCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="{Binding PostedTodayAmount, StringFormat=C}" />
                        </StackPanel>
                    </Border>

                    <!--  This Month  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource MonthlyHeaderText}" Text="📅 This Month" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding MonthlyTransactionCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="{Binding MonthlyAmount, StringFormat=C}" />
                        </StackPanel>
                    </Border>

                    <!--  Balance Check  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource BalanceHeaderText}" Text="⚖️ Balance Status" />
                            <TextBlock
                                Foreground="{Binding BalanceStatusColor}"
                                Style="{StaticResource CardValueText}"
                                Text="{Binding BalanceStatus}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="{Binding BalanceDifference, StringFormat=C}" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!--  Pending Actions Panel  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <Grid>
                            <TextBlock
                                HorizontalAlignment="Left"
                                Style="{StaticResource SectionHeaderText}"
                                Text="⚡ Pending Actions" />
                            <TextBlock
                                HorizontalAlignment="Right"
                                Style="{StaticResource AlertCountText}"
                                Text="{Binding PendingActionsCount}" />
                        </Grid>

                        <ScrollViewer
                            Height="120"
                            Margin="0,10,0,0"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding PendingActions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5" Style="{StaticResource PendingActionItemBorder}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Style="{StaticResource ActionTypeText}" Text="{Binding ActionType}" />
                                                    <TextBlock Style="{StaticResource ActionDescriptionText}" Text="{Binding Description}" />
                                                </StackPanel>

                                                <Button
                                                    Grid.Column="1"
                                                    Command="{Binding DataContext.HandlePendingActionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Content="→"
                                                    Style="{StaticResource ModernMiniButton}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Enhanced Filters & View Options  -->
            <Border
                Grid.Row="2"
                Margin="0,0,0,20"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Filter Header with View Toggle  -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource SectionHeaderText}"
                            Text="🔍 Filters &amp; Search" />

                        <!--  View Toggle  -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource FilterLabelText}"
                                Text="View:" />
                            <ToggleButton
                                x:Name="ShowAllToggle"
                                Content="All"
                                IsChecked="{Binding ShowAllTransactions}"
                                Style="{StaticResource FilterToggleButton}" />
                            <ToggleButton
                                x:Name="ShowDraftsToggle"
                                Margin="5,0"
                                Content="Drafts"
                                IsChecked="{Binding ShowDraftsOnly}"
                                Style="{StaticResource FilterToggleButton}" />
                            <ToggleButton
                                x:Name="ShowPostedToggle"
                                Content="Posted"
                                IsChecked="{Binding ShowPostedOnly}"
                                Style="{StaticResource FilterToggleButton}" />
                        </StackPanel>
                    </Grid>

                    <!--  Filter Controls  -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Search Box  -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="Search Description/Reference" />
                            <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Date Range  -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="From Date" />
                            <DatePicker
                                Margin="0,5,0,0"
                                SelectedDate="{Binding StartDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="To Date" />
                            <DatePicker
                                Margin="0,5,0,0"
                                SelectedDate="{Binding EndDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>

                        <!--  Account Filter  -->
                        <StackPanel Grid.Column="3" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="Account" />
                            <ComboBox
                                Margin="0,5,0,0"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding AccountFilters}"
                                SelectedValue="{Binding SelectedAccountId}"
                                SelectedValuePath="Id"
                                Style="{StaticResource ModernComboBox}" />
                        </StackPanel>

                        <!--  Filter Actions  -->
                        <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
                            <Button
                                Margin="0,0,0,5"
                                Command="{Binding ApplyFiltersCommandCommand}"
                                Content="Apply"
                                Style="{StaticResource ModernActionButton}" />
                            <Button
                                Command="{Binding ClearFiltersCommand}"
                                Content="Clear"
                                Style="{StaticResource ModernSecondaryButton}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!--  Main Content Area  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Transactions List/Grid  -->
                <Border
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <!--  List Header  -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource SectionHeaderText}"
                                Text="📋 Journal Entries" />

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ComboBox
                                    Width="120"
                                    Margin="0,0,10,0"
                                    SelectedIndex="0"
                                    Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="25 per page" />
                                    <ComboBoxItem Content="50 per page" />
                                    <ComboBoxItem Content="100 per page" />
                                </ComboBox>
                                <Button
                                    Command="{Binding RefreshCommand}"
                                    Content="🔄"
                                    Style="{StaticResource ModernRefreshButton}" />
                            </StackPanel>
                        </Grid>

                        <!--  Journal Entries DataGrid with Modern Styling  -->
                        <DataGrid
                            MaxHeight="600"
                            ItemsSource="{Binding FilteredJournalEntries}"
                            SelectedItem="{Binding SelectedJournalEntry}"
                            SelectionMode="Single"
                            Style="{StaticResource ModernDataGridStyle}">

                            <DataGrid.RowStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="Black" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.CellStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="#FF4472C4" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontFamily" Value="Segoe UI" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <!--  Status Indicator  -->
                                <DataGridTemplateColumn
                                    Width="Auto"
                                    CanUserResize="False"
                                    Header="">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border
                                                Width="12"
                                                Height="12"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Background="{Binding Status, Converter={StaticResource StatusIndicatorConverter}}"
                                                CornerRadius="6">
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="3"
                                                        Opacity="0.3"
                                                        ShadowDepth="1"
                                                        Color="Black" />
                                                </Border.Effect>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Journal Number  -->
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding JournalNumber}"
                                    Header="Journal #">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Segoe UI" />
                                            <Setter Property="FontWeight" Value="Medium" />
                                            <Setter Property="Foreground" Value="#34495E" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Date  -->
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding JournalDate, StringFormat='MMM dd, yyyy'}"
                                    Header="Date">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Segoe UI" />
                                            <Setter Property="FontWeight" Value="Normal" />
                                            <Setter Property="Foreground" Value="#2C3E50" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Reference  -->
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding Reference}"
                                    Header="Reference">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Segoe UI" />
                                            <Setter Property="FontWeight" Value="Normal" />
                                            <Setter Property="Foreground" Value="#7F8C8D" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Description  -->
                                <DataGridTextColumn
                                    Width="Auto"
                                    MinWidth="250"
                                    Binding="{Binding Description}"
                                    Header="Description">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Segoe UI" />
                                            <Setter Property="FontWeight" Value="Normal" />
                                            <Setter Property="Foreground" Value="#2C3E50" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="ToolTip" Value="{Binding Description}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Lines Column  -->
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding JournalLines.Count, StringFormat='0 lines'}"
                                    Header="Lines">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Segoe UI" />
                                            <Setter Property="FontSize" Value="12" />
                                            <Setter Property="Foreground" Value="#7F8C8D" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Amount  -->
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding Amount, StringFormat=C}"
                                    Header="Amount">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                            <Setter Property="FontFamily" Value="Segoe UI" />
                                            <Setter Property="FontSize" Value="13" />
                                            <Setter Property="Foreground" Value="#27AE60" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Amount, Converter={StaticResource NegativeAmountConverter}}" Value="True">
                                                    <Setter Property="Foreground" Value="#E74C3C" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Status Badge  -->
                                <DataGridTemplateColumn Width="Auto" Header="Status">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding Status, Converter={StaticResource StatusColorConverter}}" Style="{StaticResource TransactionStatusBadge}">
                                                <Border.Effect>
                                                    <DropShadowEffect
                                                        BlurRadius="4"
                                                        Opacity="0.2"
                                                        ShadowDepth="1"
                                                        Color="Black" />
                                                </Border.Effect>
                                                <TextBlock Style="{StaticResource StatusBadgeText}" Text="{Binding Status}" />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Actions  -->
                                <DataGridTemplateColumn Width="Auto" Header="Actions">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">

                                                <!--  Edit Button  -->
                                                <Button
                                                    Margin="0,0,4,0"
                                                    Command="{Binding DataContext.EditJournalEntryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ModernIconButton}"
                                                    ToolTip="Edit Journal Entry">
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                                        Fill="#3498DB"
                                                        Stretch="Uniform" />
                                                </Button>

                                                <!--  Post Button (only for drafts)  -->
                                                <Button
                                                    Margin="0,0,4,0"
                                                    Command="{Binding DataContext.PostJournalEntryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ModernIconButton}"
                                                    ToolTip="Post Journal Entry"
                                                    Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}">
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"
                                                        Fill="#27AE60"
                                                        Stretch="Uniform" />
                                                </Button>

                                                <!--  View Details Button  -->
                                                <Button
                                                    Margin="0,0,4,0"
                                                    Command="{Binding DataContext.ViewJournalDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ModernIconButton}"
                                                    ToolTip="View Journal Details">
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z"
                                                        Fill="#9B59B6"
                                                        Stretch="Uniform" />
                                                </Button>

                                                <!--  Delete Button (only for drafts)  -->
                                                <Button
                                                    Command="{Binding DataContext.DeleteJournalEntryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource ModernIconButton}"
                                                    ToolTip="Delete Draft"
                                                    Visibility="{Binding Status, Converter={StaticResource StatusToVisibilityConverter}}">
                                                    <Path
                                                        Width="14"
                                                        Height="14"
                                                        Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                        Fill="#E74C3C"
                                                        Stretch="Uniform" />
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!--  Pagination  -->
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource FilterLabelText}"
                                Text="{Binding ResultsSummary}" />

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button
                                    Command="{Binding PreviousPageCommand}"
                                    Content="←"
                                    IsEnabled="{Binding HasPreviousPage}"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <TextBlock
                                    Margin="15,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource FilterLabelText}"
                                    Text="{Binding CurrentPageInfo}" />
                                <Button
                                    Command="{Binding NextPageCommand}"
                                    Content="→"
                                    IsEnabled="{Binding HasNextPage}"
                                    Style="{StaticResource ModernSecondaryButton}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Journal Entry Details & Quick Actions Panel  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderText}" Text="📋 Selected Entry Details" />

                        <!--  Journal Entry Details (shown when item selected)  -->
                        <StackPanel Margin="0,10,0,0" Visibility="{Binding SelectedJournalEntry, Converter={StaticResource NullToVisibilityConverter}}">
                            <!--  Entry Header Info  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailHeaderText}" Text="{Binding SelectedJournalEntry.JournalNumber}" />
                                    <TextBlock Style="{StaticResource DetailSubText}" Text="{Binding SelectedJournalEntry.JournalDate, StringFormat='MMM dd, yyyy'}" />
                                    <Border
                                        Margin="0,5,0,0"
                                        HorizontalAlignment="Left"
                                        Background="{Binding SelectedJournalEntry.Status, Converter={StaticResource StatusColorConverter}}"
                                        Style="{StaticResource TransactionStatusBadge}">
                                        <TextBlock Style="{StaticResource StatusBadgeText}" Text="{Binding SelectedJournalEntry.Status}" />
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!--  Description  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Description" />
                                    <TextBlock
                                        Style="{StaticResource DetailValueText}"
                                        Text="{Binding SelectedJournalEntry.Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  Journal Lines Preview  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Account Lines" />
                                    <ItemsControl Margin="0,5,0,0" ItemsSource="{Binding SelectedJournalEntry.JournalLines}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        Grid.Column="0"
                                                        Style="{StaticResource DetailSubText}"
                                                        Text="{Binding Description}" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        Style="{StaticResource DetailSubText}"
                                                        Text="{Binding DebitAmount, StringFormat=C}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!--  Quick Actions for Selected Entry  -->
                            <StackPanel Margin="0,10,0,0">
                                <Button
                                    Margin="0,0,0,5"
                                    Command="{Binding EditJournalEntryCommand}"
                                    CommandParameter="{Binding SelectedJournalEntry}"
                                    Content="📝 Edit Entry"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,0,0,5"
                                    Command="{Binding PostJournalEntryCommand}"
                                    CommandParameter="{Binding SelectedJournalEntry}"
                                    Content="✅ Post Entry"
                                    Style="{StaticResource ModernSecondaryButton}"
                                    Visibility="{Binding SelectedJournalEntry.Status, Converter={StaticResource StatusToVisibilityConverter}}" />
                                <Button
                                    Command="{Binding DeleteJournalEntryCommand}"
                                    CommandParameter="{Binding SelectedJournalEntry}"
                                    Content="🗑️ Delete Draft"
                                    Style="{StaticResource ModernSecondaryButton}"
                                    Visibility="{Binding SelectedJournalEntry.Status, Converter={StaticResource StatusToVisibilityConverter}}" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Empty State  -->
                        <StackPanel
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Visibility="{Binding SelectedJournalEntry, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                            <TextBlock
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                FontSize="48"
                                Opacity="0.3"
                                Text="📋" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{StaticResource DetailSubText}"
                                Text="Select a journal entry to view details" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</base:BaseAnimatedPage>