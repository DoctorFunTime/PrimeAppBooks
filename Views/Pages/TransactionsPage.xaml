<base:BaseAnimatedPage
    x:Class="PrimeAppBooks.Views.Pages.TransactionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:PrimeAppBooks.Views.Pages"
    xmlns:converters="clr-namespace:PrimeAppBooks.Conveters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:PrimeAppBooks.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=pages:TransactionsPageViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    Background="Transparent"
    mc:Ignorable="d">

    <base:BaseAnimatedPage.Resources>
        <converters:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter" />
        <converters:StatusIndicatorConverter x:Key="StatusIndicatorConverter" />
        <converters:NegativeAmountConverter x:Key="NegativeAmountConverter" />
        <converters:StatusColorConverter x:Key="StatusColorConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:ZeroAmountVisibilityConverter x:Key="ZeroAmountVisibilityConverter" />
        <converters:AmountDisplayConverter x:Key="AmountDisplayConverter" />
    </base:BaseAnimatedPage.Resources>

    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header Section with Quick Actions  -->
            <Border
                Grid.Row="0"
                Margin="5,10"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource WelcomeTitleText}" Text="Journal Entries &amp; Transactions" />
                        <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Manage your accounting entries, drafts, and posted transactions" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button
                            Margin="5,0"
                            Command="{Binding NavigateToJournalPageCommand}"
                            Content="📝 New Journal Entry"
                            Style="{StaticResource ModernActionButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding ImportTransactionsCommand}"
                            Content="📥 Import"
                            Style="{StaticResource ModernSecondaryButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding ExportTransactionsCommand}"
                            Content="📊 Export"
                            Style="{StaticResource ModernSecondaryButton}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Quick Stats & Status Overview  -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Summary Cards  -->
                <UniformGrid Grid.Column="0" Columns="4">
                    <!--  Draft Entries  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource DraftHeaderText}" Text="📝 Draft Entries" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding DraftEntriesCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Ready for review" />
                        </StackPanel>
                    </Border>

                    <!--  Posted This Week  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource PostedHeaderText}" Text="✅ Posted This Week" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding PostedThisWeekCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Recent activity" />
                        </StackPanel>
                    </Border>

                    <!--  Recent Activity  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource MonthlyHeaderText}" Text="📅 Recent Activity" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding RecentActivityCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Last 7 days" />
                        </StackPanel>
                    </Border>

                    <!--  Balance Status  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource BalanceHeaderText}" Text="⚖️ Balance Status" />
                            <TextBlock
                                Foreground="{Binding BalanceStatusColor}"
                                Style="{StaticResource CardValueText}"
                                Text="{Binding BalanceStatus}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="{Binding UnbalancedEntriesCount}" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!--  Pending Actions Panel  -->
                <Border
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <Grid>
                            <TextBlock
                                HorizontalAlignment="Left"
                                Style="{StaticResource SectionHeaderText}"
                                Text="⚡ Pending Actions" />
                            <TextBlock
                                HorizontalAlignment="Right"
                                Style="{StaticResource AlertCountText}"
                                Text="{Binding PendingActionsCount}" />
                        </Grid>

                        <ScrollViewer
                            Height="120"
                            Margin="0,10,0,0"
                            VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding PendingActions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5" Style="{StaticResource PendingActionItemBorder}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Style="{StaticResource ActionTypeText}" Text="{Binding ActionType}" />
                                                    <TextBlock Style="{StaticResource ActionDescriptionText}" Text="{Binding Description}" />
                                                </StackPanel>

                                                <Button
                                                    Grid.Column="1"
                                                    Command="{Binding DataContext.HandlePendingActionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Content="→"
                                                    Style="{StaticResource ModernMiniButton}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>

            <!--  Enhanced Filters & View Options  -->
            <Border
                Grid.Row="2"
                Margin="5"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Filter Header with View Toggle  -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource SectionHeaderText}"
                            Text="🔍 Filters &amp; Search" />

                        <!--  View Toggle  -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource FilterLabelText}"
                                Text="View:" />
                            <RadioButton
                                x:Name="ShowAllRadio"
                                Content="All"
                                GroupName="ViewFilter"
                                IsChecked="{Binding ShowAllTransactions}"
                                Style="{StaticResource FilterToggleButton}" />
                            <RadioButton
                                x:Name="ShowDraftsRadio"
                                Margin="5,0"
                                Content="Drafts"
                                GroupName="ViewFilter"
                                IsChecked="{Binding ShowDraftsOnly}"
                                Style="{StaticResource FilterToggleButton}" />
                            <RadioButton
                                x:Name="ShowPostedRadio"
                                Content="Posted"
                                GroupName="ViewFilter"
                                IsChecked="{Binding ShowPostedOnly}"
                                Style="{StaticResource FilterToggleButton}" />
                            <Button
                                Margin="5,0"
                                Command="{Binding ClearFiltersCommand}"
                                Content="Clear"
                                Style="{StaticResource ModernSecondaryButton}" />
                        </StackPanel>
                    </Grid>

                    <!--  Filter Controls  -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Search Box  -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0"  Width="250" HorizontalAlignment="Left">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="Search Description/Reference" />
                            <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  Date Range  -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="From Date" />
                            <DatePicker
                                Margin="0,5,0,0"
                                Width="180"
                                SelectedDate="{Binding StartDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="To Date" />
                            <DatePicker
                                Margin="0,5,0,0"
                                Width="180"
                                SelectedDate="{Binding EndDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>

                        <!--  Account Filter  -->
                        <StackPanel Grid.Column="3" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="Account" />
                            <ComboBox
                                Margin="0,5,0,0"
                                DisplayMemberPath="AccountName"
                                ItemsSource="{Binding AccountFilters}"
                                SelectedValue="{Binding SelectedAccountId}"
                                SelectedValuePath="AccountId"
                                Style="{StaticResource ModernComboBox}" />
                        </StackPanel>

                        <!--  Filter Actions  -->
                        <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!--  Main Content Area  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Transactions List/Grid  -->
                <Border
                    Grid.Column="0"
                    Margin="5,10"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <!--  List Header  -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource SectionHeaderText}"
                                Text="📋 Journal Entries" />

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ComboBox
                                    Width="120"
                                    Margin="0,0,10,0"
                                    SelectedIndex="0"
                                    Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Content="25 per page" />
                                    <ComboBoxItem Content="50 per page" />
                                    <ComboBoxItem Content="100 per page" />
                                </ComboBox>
                                <Button
                                    Command="{Binding RefreshCommand}"
                                    Content="🔄"
                                    Style="{StaticResource ModernRefreshButton}" />
                            </StackPanel>
                        </Grid>

                        <!--  Journal Entries DataGrid with Modern Styling  -->
                        <Viewbox MaxWidth="700">
                            <DataGrid
                                MaxHeight="600"
                                GridLinesVisibility="None"
                                ItemsSource="{Binding FilteredJournalEntries}"
                                SelectedItem="{Binding SelectedJournalEntry}"
                                SelectionMode="Single"
                                Style="{StaticResource ModernDataGridStyle}">

                                <!--  Set row height and vertical alignment with enhanced selection state  -->
                                <DataGrid.RowStyle>
                                    <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                                        <Setter Property="Height" Value="40" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#2A4A7B" />
                                                <!--  Selected background color  -->
                                                <Setter Property="BorderBrush" Value="#4472C4" />
                                                <Setter Property="BorderThickness" Value="1" />
                                                <Setter Property="Foreground" Value="White" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1E3A5F" />
                                                <!--  Hover color  -->
                                                <Setter Property="Foreground" Value="White" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>

                                <!--  Enhanced cell styling with selection state  -->
                                <DataGrid.CellStyle>
                                    <Style BasedOn="{StaticResource MaterialDesignDataGridCell}" TargetType="DataGridCell">
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent" />
                                                <!--  Let row handle background  -->
                                                <Setter Property="BorderBrush" Value="Transparent" />
                                                <Setter Property="Foreground" Value="White" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.CellStyle>

                                <!--  Update column header style  -->
                                <DataGrid.ColumnHeaderStyle>
                                    <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                        <Setter Property="Foreground" Value="#FF4472C4" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="FontFamily" Value="Segoe UI" />
                                        <Setter Property="FontSize" Value="12" />
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Height" Value="35" />
                                        <Setter Property="Background" Value="#1E1E1E" />
                                        <Setter Property="BorderBrush" Value="#3A3A3A" />
                                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <!--  Update individual column styles to ensure vertical centering  -->
                                <DataGrid.Columns>
                                    <!--  Status Indicator  -->
                                    <DataGridTemplateColumn
                                        Width="Auto"
                                        CanUserResize="False"
                                        Header="">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Width="12"
                                                    Height="12"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Background="{Binding Status, Converter={StaticResource StatusIndicatorConverter}}"
                                                    CornerRadius="6">
                                                    <Border.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="3"
                                                            Opacity="0.3"
                                                            ShadowDepth="1"
                                                            Color="Black" />
                                                    </Border.Effect>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!--  Journal Number  -->
                                    <DataGridTextColumn
                                        Width="Auto"
                                        Binding="{Binding JournalNumber}"
                                        Header="#">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontWeight" Value="Medium" />
                                                <Setter Property="Foreground" Value="Gainsboro" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Date  -->
                                    <DataGridTextColumn
                                        Width="Auto"
                                        Binding="{Binding JournalDate, StringFormat='MMM dd, yyyy'}"
                                        Header="Date">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontWeight" Value="Normal" />
                                                <Setter Property="Foreground" Value="Gainsboro" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Reference  -->
                                    <DataGridTextColumn
                                        Width="Auto"
                                        Binding="{Binding Reference}"
                                        Header="Reference">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontWeight" Value="Normal" />
                                                <Setter Property="Foreground" Value="#7F8C8D" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Description  -->
                                    <DataGridTextColumn
                                        Width="Auto"
                                        MinWidth="100"
                                        MaxWidth="250"
                                        Binding="{Binding Description}"
                                        Header="Description">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontWeight" Value="Normal" />
                                                <Setter Property="Foreground" Value="Gainsboro" />
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                <Setter Property="ToolTip" Value="{Binding Description}" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Lines Column  -->
                                    <DataGridTextColumn
                                        Width="Auto"
                                        Binding="{Binding JournalLines.Count, StringFormat='0 lines'}"
                                        Header="Lines">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontSize" Value="12" />
                                                <Setter Property="Foreground" Value="#7F8C8D" />
                                                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Amount  -->
                                    <DataGridTextColumn
                                        Width="Auto"
                                        Binding="{Binding Amount, StringFormat=C}"
                                        Header="Amount">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                                <Setter Property="FontFamily" Value="Segoe UI" />
                                                <Setter Property="FontSize" Value="13" />
                                                <Setter Property="Foreground" Value="#27AE60" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Amount, Converter={StaticResource NegativeAmountConverter}}" Value="True">
                                                        <Setter Property="Foreground" Value="#E74C3C" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                        <Setter Property="Foreground" Value="White" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Status Badge  -->
                                    <DataGridTemplateColumn Width="Auto" Header="Status">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border
                                                    VerticalAlignment="Center"
                                                    Background="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                                    Style="{StaticResource TransactionStatusBadge}">
                                                    <Border.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="4"
                                                            Opacity="0.2"
                                                            ShadowDepth="1"
                                                            Color="Black" />
                                                    </Border.Effect>
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        Foreground="Black"
                                                        Style="{StaticResource StatusBadgeText}"
                                                        Text="{Binding Status}" />
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Viewbox>

                        <!--  Pagination  -->
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource FilterLabelText}"
                                Text="{Binding ResultsSummary}" />

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button
                                    Command="{Binding PreviousPageCommand}"
                                    Content="←"
                                    IsEnabled="{Binding HasPreviousPage}"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <TextBlock
                                    Margin="15,0"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource FilterLabelText}"
                                    Text="{Binding CurrentPageInfo}" />
                                <Button
                                    Command="{Binding NextPageCommand}"
                                    Content="→"
                                    IsEnabled="{Binding HasNextPage}"
                                    Style="{StaticResource ModernSecondaryButton}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  Journal Entry Details & Quick Actions Panel  -->
                <Border
                    Grid.Column="1"
                    MaxWidth="280"
                    Margin="3,10"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderText}" Text="📋 Selected Entry Details" />

                        <!--  Journal Entry Details (shown when item selected)  -->
                        <StackPanel Margin="0,10,0,0" Visibility="{Binding SelectedJournalEntry, Converter={StaticResource NullToVisibilityConverter}}">
                            <!--  Entry Header Info  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailHeaderText}" Text="{Binding SelectedJournalEntry.JournalNumber}" />
                                    <TextBlock Style="{StaticResource DetailSubText}" Text="{Binding SelectedJournalEntry.JournalDate, StringFormat='MMM dd, yyyy'}" />
                                    <Border
                                        Margin="0,5,0,0"
                                        HorizontalAlignment="Left"
                                        Background="{Binding SelectedJournalEntry.Status, Converter={StaticResource StatusColorConverter}}"
                                        Style="{StaticResource TransactionStatusBadge}">
                                        <TextBlock Style="{StaticResource StatusBadgeText}" Text="{Binding SelectedJournalEntry.Status}" />
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!--  Description  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Description" />
                                    <TextBlock
                                        Style="{StaticResource DetailValueText}"
                                        Text="{Binding SelectedJournalEntry.Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>

                            <!--  Journal Lines Preview  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Account Lines" />
                                    <ItemsControl Margin="0,5,0,0" ItemsSource="{Binding SelectedJournalEntry.JournalLines}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid
                                                    Margin="0,2"
                                                    HorizontalAlignment="Left"
                                                    Visibility="{Binding Converter={StaticResource ZeroAmountVisibilityConverter}}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        Style="{StaticResource DetailSubText}"
                                                        Text="{Binding Description}" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Left"
                                                        Style="{StaticResource DetailSubText}"
                                                        Text="{Binding Converter={StaticResource AmountDisplayConverter}}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                            <!--  Quick Actions for Selected Entry  -->
                            <StackPanel Margin="0,10,0,0">
                                <Button
                                    Margin="0,0,0,5"
                                    Command="{Binding EditJournalEntryCommand}"
                                    CommandParameter="{Binding SelectedJournalEntry}"
                                    Content="📝 Edit Entry"
                                    Style="{StaticResource ModernSecondaryButton}" />
                                <Button
                                    Margin="0,0,0,5"
                                    Command="{Binding PostJournalEntryCommand}"
                                    CommandParameter="{Binding SelectedJournalEntry}"
                                    Content="✅ Post Entry"
                                    Style="{StaticResource ModernSecondaryButton}"
                                    Visibility="{Binding SelectedJournalEntry.Status, Converter={StaticResource StatusToVisibilityConverter}}" />
                                <Button
                                    Command="{Binding DeleteJournalEntryCommand}"
                                    CommandParameter="{Binding SelectedJournalEntry}"
                                    Content="🗑️ Delete Draft"
                                    Style="{StaticResource ModernSecondaryButton}"
                                    Visibility="{Binding SelectedJournalEntry.Status, Converter={StaticResource StatusToVisibilityConverter}}" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Empty State  -->
                        <StackPanel
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Visibility="{Binding SelectedJournalEntry, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                            <TextBlock
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                FontSize="48"
                                Opacity="0.3"
                                Text="📋" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{StaticResource DetailSubText}"
                                Text="Select a journal entry to view details" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</base:BaseAnimatedPage>