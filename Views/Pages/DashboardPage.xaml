<Page
    x:Class="PrimeAppBooks.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fluent="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    Background="Transparent">

    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Main Content Area  -->
            <StackPanel Grid.Column="0" Margin="0,0,0,0">
                <!--  Welcome Section  -->
                <Border Style="{StaticResource ModernCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource WelcomeTitleText}" Text="Welcome back, Sarah!" />
                            <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Here's your comprehensive financial overview" />
                        </StackPanel>

                        <Button
                            Grid.Column="1"
                            Margin="5,0"
                            Command="{Binding ExportTransactionsCommand}"
                            Content="📊 Connect to Quickbooks"
                            Style="{StaticResource ModernSecondaryButton}" />
                    </Grid>
                </Border>

                <!--  KPI Cards Grid  -->
                <UniformGrid Margin="0,5,0,0" Columns="4">
                    <!--  Cash Balance Card  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource CashHeaderText}" Text="💰 Cash Balance" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding Address}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="+2.8% from last month" />
                        </StackPanel>
                    </Border>

                    <!--  Receivables Card  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource ReceivablesHeaderText}" Text="📥 Receivables" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding CompanyName}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="12 outstanding" />
                        </StackPanel>
                    </Border>

                    <!--  Payables Card  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource PayablesHeaderText}" Text="📤 Payables" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="$15,240.00" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Due in 30 days" />
                        </StackPanel>
                    </Border>

                    <!--  Net Income Card  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource IncomeHeaderText}" Text="📊 Net Income" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="$54,310.00" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="YTD 2024" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!--  Additional KPI Cards Row  -->
                <UniformGrid Margin="0,10,0,0" Columns="3">
                    <!--  Monthly Revenue Card  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource RevenueHeaderText}" Text="📈 Monthly Revenue" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="$18,760.00" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="+12.5% vs last month" />
                        </StackPanel>
                    </Border>

                    <!--  Monthly Expenses Card  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource ExpensesHeaderText}" Text="📉 Monthly Expenses" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="$12,340.00" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="-3.2% vs last month" />
                        </StackPanel>
                    </Border>

                    <!--  Profit Margin Card  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource ProfitHeaderText}" Text="💎 Profit Margin" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="34.2%" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Above target (30%)" />
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!--  Charts Section  -->
                <Grid Margin="0,5,0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Revenue Trend Chart  -->
                    <Border Grid.Row="0" Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource SectionHeaderText}"
                                    Text="Revenue Trend (Last 12 Months)" />

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ComboBox
                                        Width="100"
                                        Margin="10,0"
                                        SelectedIndex="0"
                                        Style="{StaticResource ModernComboBox}">
                                        <ComboBoxItem Content="12 Months" />
                                        <ComboBoxItem Content="6 Months" />
                                        <ComboBoxItem Content="3 Months" />
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <lvc:CartesianChart
                                Height="250"
                                Margin="0,10,0,0"
                                LegendLocation="None"
                                Series="{Binding RevenueSeries}">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Labels="{Binding Months}" />
                                </lvc:CartesianChart.AxisX>
                            </lvc:CartesianChart>
                        </StackPanel>
                    </Border>

                    <!--  Expenses Breakdown Chart  -->
                    <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource SectionHeaderText}" Text="Expense Categories (This Month)" />
                                <lvc:PieChart
                                    Height="200"
                                    Margin="0,10,0,0"
                                    LegendLocation="Right"
                                    Series="{Binding ExpensesSeries}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                                <TextBlock Style="{StaticResource SectionHeaderText}" Text="Top Expenses" />
                                <Border Margin="0,10,0,5" Style="{StaticResource ExpenseItemBorder}">
                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="Rent" />
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            Foreground="White"
                                            Text="$3,500" />
                                    </Grid>
                                </Border>
                                <Border Margin="0,0,0,5" Style="{StaticResource ExpenseItemBorder}">
                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="Utilities" />
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            Foreground="White"
                                            Text="$780" />
                                    </Grid>
                                </Border>
                                <Border Margin="0,0,0,5" Style="{StaticResource ExpenseItemBorder}">
                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="Marketing" />
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            Foreground="White"
                                            Text="$1,200" />
                                    </Grid>
                                </Border>
                                <Border Margin="0,0,0,5" Style="{StaticResource ExpenseItemBorder}">
                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Left"
                                            Foreground="White"
                                            Text="Office Supplies" />
                                        <TextBlock
                                            HorizontalAlignment="Right"
                                            Foreground="White"
                                            Text="$340" />
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Cash Flow Projection  -->
                    <Border Grid.Row="2" Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Style="{StaticResource SectionHeaderText}"
                                    Text="Cash Flow Projection (Next 6 Months)" />
                                <Button
                                    Grid.Column="1"
                                    Content="📥 Export Data"
                                    Style="{StaticResource ModernCenterButtonStyle}" />
                            </Grid>

                            <lvc:CartesianChart
                                Height="200"
                                Margin="0,10,0,0"
                                LegendLocation="Bottom"
                                Series="{Binding CashFlowSeries}">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Labels="{Binding ProjectionMonths}" />
                                </lvc:CartesianChart.AxisX>
                            </lvc:CartesianChart>
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  Outstanding Items Summary  -->
                <Grid Margin="0,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Overdue Items  -->
                    <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <Grid>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource AlertHeaderText}"
                                    Text="⚠️ Overdue Items" />
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource AlertCountText}"
                                    Text="3 items" />
                            </Grid>

                            <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding OverdueItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5" Style="{StaticResource OverdueItemBorder}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Description}" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="10,0"
                                                    Text="{Binding Amount}" />
                                                <Button
                                                    Grid.Column="2"
                                                    Content="View"
                                                    Style="{StaticResource ModernMiniButton}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!--  Upcoming Due  -->
                    <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <Grid VerticalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource DueHeaderText}"
                                    Text="📅 Due This Week" />
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Style="{StaticResource DueCountText}"
                                    Text="7 items" />
                            </Grid>

                            <ItemsControl Margin="0,10,0,0" ItemsSource="{Binding UpcomingDueItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,5" Style="{StaticResource DueItemBorder}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding Description}" />
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="10,0"
                                                    Text="{Binding Amount}" />
                                                <Button
                                                    Grid.Column="2"
                                                    Content="Pay"
                                                    Style="{StaticResource ModernMiniButton}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!--  Recent Activity Sidebar  -->
            <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}">
                <StackPanel>
                    <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                        <TextBlock
                            HorizontalAlignment="Left"
                            Style="{StaticResource SectionHeaderText}"
                            Text="Recent Activity" />
                        <Button
                            HorizontalAlignment="Right"
                            Content="⟳"
                            Style="{StaticResource ModernRefreshButton}" />
                    </StackPanel>

                    <ScrollViewer
                        Height="600"
                        Margin="0,10,0,0"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding RecentActivities}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8" Style="{StaticResource ActivityItemBorder}">
                                        <StackPanel>
                                            <Grid>
                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    Style="{StaticResource ActivityTypeText}"
                                                    Text="{Binding Type}" />
                                                <TextBlock
                                                    HorizontalAlignment="Right"
                                                    Style="{StaticResource ActivityAmountText}"
                                                    Text="{Binding Amount}" />
                                            </Grid>

                                            <TextBlock
                                                Margin="0,2,0,0"
                                                Style="{StaticResource ActivityDescriptionText}"
                                                Text="{Binding Description}" />
                                            <TextBlock
                                                Margin="0,2,0,0"
                                                Style="{StaticResource ActivityTimeText}"
                                                Text="{Binding Time}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!--  View All Activities Button  -->
                    <Button Content="View All Activities" Style="{StaticResource ModernCenterButtonStyle}" />
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>