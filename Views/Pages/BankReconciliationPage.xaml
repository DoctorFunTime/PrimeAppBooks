<base:BaseAnimatedPage
    x:Class="PrimeAppBooks.Views.Pages.BankReconciliationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:PrimeAppBooks.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:PrimeAppBooks.ViewModels.Pages"
    xmlns:views="clr-namespace:PrimeAppBooks.Views.Controls"
    d:DataContext="{d:DesignInstance Type=pages:BankReconciliationViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header Section  -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,20"
            Style="{StaticResource ModernCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource WelcomeTitleText}" Text="ðŸ¦ Bank Reconciliation" />
                    <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Match your book balance with your bank statement" />

                    <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Margin="0,0,0,5" Style="{StaticResource DetailLabelText}" Text="Bank Account" />
                            <ComboBox
                                Width="250"
                                ItemsSource="{Binding AvailableAccounts}"
                                SelectedItem="{Binding SelectedAccount}"
                                Style="{StaticResource ModernComboBox}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FullName}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Margin="0,0,0,5" Style="{StaticResource DetailLabelText}" Text="Statement Date" />
                            <DatePicker
                                Width="150"
                                SelectedDate="{Binding StatementDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Margin="0,0,0,5" Style="{StaticResource DetailLabelText}" Text="Statement Ending Balance" />
                            <TextBox
                                Width="150"
                                Style="{StaticResource ModernTextBoxStyle}"
                                Text="{Binding StatementEndingBalance, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Button
                        Margin="0,0,10,0"
                        Command="{Binding SaveProgressCommand}"
                        Content="Save Draft"
                        Style="{StaticResource ModernSecondaryButton}" />
                    <Button
                        Command="{Binding NavigateBackCommand}"
                        Content="â† Back"
                        Style="{StaticResource ModernSecondaryButton}" />
                </StackPanel>
            </Grid>
        </Border>

        <!--  Transactions Table  -->
        <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}">
            <DataGrid
                Margin="2"
                GridLinesVisibility="None"
                IsReadOnly="False"
                ItemsSource="{Binding Transactions}"
                Style="{StaticResource ModernDataGridStyle}">

                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Width="50"
                        Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                        Header="Cleared" />

                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Line.LineDate, StringFormat=d}"
                        Header="Date"
                        IsReadOnly="True" />

                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Line.JournalEntry.JournalNumber}"
                        Header="Journal #"
                        IsReadOnly="True" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Line.Description}"
                        Header="Description"
                        IsReadOnly="True" />

                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Line.DebitAmount, StringFormat=N2}"
                        Header="Debit"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding Line.CreditAmount, StringFormat=N2}"
                        Header="Credit"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!--  Summary Footer  -->
        <Border
            Grid.Row="2"
            Margin="0,20,0,0"
            Style="{StaticResource ModernCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <UniformGrid
                    Grid.Column="0"
                    Columns="3"
                    Rows="2">
                    <StackPanel Margin="0,0,20,5">
                        <TextBlock Style="{StaticResource DetailLabelText}" Text="Starting Balance" />
                        <TextBlock Style="{StaticResource ActivityAmountText}" Text="{Binding StatementStartingBalance, StringFormat=N2}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,20,5">
                        <TextBlock Style="{StaticResource DetailLabelText}" Text="Total Cleared Debits" />
                        <TextBlock Style="{StaticResource ActivityAmountText}" Text="{Binding ClearedDebits, StringFormat=N2}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,20,5">
                        <TextBlock Style="{StaticResource DetailLabelText}" Text="Total Cleared Credits" />
                        <TextBlock Style="{StaticResource ActivityAmountText}" Text="{Binding ClearedCredits, StringFormat=N2}" />
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Style="{StaticResource DetailLabelText}" Text="Adjusted Book Balance" />
                        <TextBlock Style="{StaticResource ActivityAmountText}" Text="{Binding ClearedBalance, StringFormat=N2}" />
                    </StackPanel>
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Style="{StaticResource DetailLabelText}" Text="Statement Ending Balance" />
                        <TextBlock Style="{StaticResource ActivityAmountText}" Text="{Binding StatementEndingBalance, StringFormat=N2}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Style="{StaticResource DetailLabelText}" Text="Difference" />
                        <TextBlock
                            FontWeight="Bold"
                            Text="{Binding Difference, StringFormat=N2}">
                            <TextBlock.Style>
                                <Style BasedOn="{StaticResource ActivityAmountText}" TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Difference}" Value="0">
                                            <Setter Property="Foreground" Value="LimeGreen" />
                                        </DataTrigger>
                                        <Trigger Property="IsEnabled" Value="True">
                                            <Setter Property="Foreground" Value="IndianRed" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding Difference}" Value="0.00">
                                            <Setter Property="Foreground" Value="LimeGreen" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </UniformGrid>

                <Button
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Command="{Binding CompleteReconciliationCommand}"
                    Content="Complete Reconciliation"
                    Style="{StaticResource ModernActionButton}" />
            </Grid>
        </Border>

        <!--  Loading Overlay  -->
        <views:LoadingOverlay
            Grid.RowSpan="3"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</base:BaseAnimatedPage>