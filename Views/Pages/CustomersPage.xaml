<base:BaseAnimatedPage
    x:Class="PrimeAppBooks.Views.Pages.CustomersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:PrimeAppBooks.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:PrimeAppBooks.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=pages:CustomersPageViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Margin="0,0,0,20" Style="{StaticResource ModernCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource WelcomeTitleText}" Text="Customer Directory" />
                    <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Manage your clinical and commercial client relationships" />
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal">
                    <hc:SearchBar
                        Width="250"
                        Margin="0,0,15,0"
                        hc:InfoElement.Placeholder="Search by name or code..."
                        Style="{StaticResource SearchBarPlus}"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Command="{Binding AddCustomerCommand}"
                        Content="âž• Add Customer"
                        Style="{StaticResource ModernActionButton}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Customers List -->
        <Border Grid.Row="1" Style="{StaticResource ModernCardStyle}">
            <Grid>
                <DataGrid
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    BorderThickness="0"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    ItemsSource="{Binding Customers}"
                    RowHeight="50"
                    Style="{StaticResource ModernDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding CustomerCode}"
                            Header="CODE" />
                        <DataGridTemplateColumn Width="*" Header="CUSTOMER NAME">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding CustomerName}" Foreground="White" />
                                        <TextBlock FontSize="11" Text="{Binding ContactPerson}" Foreground="#90FFFFFF" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding Email}"
                            Header="EMAIL" />
                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding Phone}"
                            Header="PHONE" />
                        <DataGridTemplateColumn Width="150" Header="AUTO-BILLING">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Visibility="{Binding IsAutoInvoiceEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <Run Text="Every " />
                                            <Run Text="{Binding AutoInvoiceInterval}" />
                                            <Run Text=" " />
                                            <Run Text="{Binding AutoInvoiceFrequency}" />
                                        </TextBlock>
                                        <TextBlock Text="Disabled" FontStyle="Italic" Foreground="#60FFFFFF" Visibility="{Binding IsAutoInvoiceEnabled, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="120" Header="ACTIONS">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            Margin="0,0,5,0"
                                            Padding="8,4"
                                            Command="{Binding DataContext.EditCustomerCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                            Content="Edit"
                                            Style="{StaticResource ModernSecondaryButton}" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- No Data State -->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock
                        FontSize="16"
                        Foreground="#60FFFFFF"
                        Text="No customers found." />
                </StackPanel>

                <!-- Loading Overlay -->
                <Border Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar
                        Width="50"
                        Height="50"
                        IsIndeterminate="True"
                        Style="{StaticResource MaterialDesignCircularProgressBar}" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</base:BaseAnimatedPage>
