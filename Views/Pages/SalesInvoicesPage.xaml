<base:BaseAnimatedPage
    x:Class="PrimeAppBooks.Views.Pages.SalesInvoicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:PrimeAppBooks.Views.Pages"
    xmlns:converters="clr-namespace:PrimeAppBooks.Conveters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PrimeAppBooks.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=vm:SalesInvoicesPageViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1100"
    Background="Transparent"
    mc:Ignorable="d">

    <base:BaseAnimatedPage.Resources>
        <converters:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter" />
        <converters:StatusIndicatorConverter x:Key="StatusIndicatorConverter" />
        <converters:StatusColorConverter x:Key="StatusColorConverter" />
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <converters:AmountDisplayConverter x:Key="AmountDisplayConverter" />
    </base:BaseAnimatedPage.Resources>

    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header Section  -->
            <Border
                Grid.Row="0"
                Margin="5,10"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource WelcomeTitleText}" Text="Sales Invoices" />
                        <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Manage invoices, payments, and customer balances" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button
                            Margin="5,0"
                            Command="{Binding CreateNewInvoiceCommand}"
                            Content="ðŸ“ New Invoice"
                            Style="{StaticResource ModernActionButton}" />
                        <Button
                            Margin="5,0"
                            Command="{Binding AddCustomerCommand}"
                            Content="ðŸ‘¤ New Customer"
                            Style="{StaticResource ModernSecondaryButton}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  Quick Stats  -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <UniformGrid Columns="4">
                    <!--  Drafts  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource DraftHeaderText}" Text="ðŸ“ Draft Invoices" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding DraftCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Waiting to be posted" />
                        </StackPanel>
                    </Border>

                    <!--  Posted This Week  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource PostedHeaderText}" Text="âœ… Posted (Week)" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding PostedThisWeekCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Invoices finalized" />
                        </StackPanel>
                    </Border>

                    <!--  Revenue Month  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource MonthlyHeaderText}" Text="ðŸ’° Revenue (Month)" />
                            <TextBlock Style="{StaticResource CardValueText}" Text="{Binding TotalRevenueThisMonth, StringFormat=C0}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Total invoiced" />
                        </StackPanel>
                    </Border>

                    <!--  Overdue (Placeholder)  -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Style="{StaticResource CardContentContainer}">
                            <TextBlock Style="{StaticResource BalanceHeaderText}" Text="âš ï¸ Overdue" />
                            <TextBlock
                                Foreground="#E74C3C"
                                Style="{StaticResource CardValueText}"
                                Text="{Binding OverdueCount}" />
                            <TextBlock Style="{StaticResource CardSubText}" Text="Invoices past due" />
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Grid>

            <!--  Filters  -->
            <Border
                Grid.Row="2"
                Margin="5"
                Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Filter Header & Toggles  -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource SectionHeaderText}"
                            Text="ðŸ” Search &amp; Filter" />

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource FilterLabelText}"
                                Text="Show:" />
                            <RadioButton
                                Content="All"
                                IsChecked="{Binding ShowAllInvoices}"
                                Style="{StaticResource FilterToggleButton}" />
                            <RadioButton
                                Margin="5,0"
                                Content="Drafts"
                                IsChecked="{Binding ShowDraftsOnly}"
                                Style="{StaticResource FilterToggleButton}" />
                            <RadioButton
                                Content="Posted"
                                IsChecked="{Binding ShowPostedOnly}"
                                Style="{StaticResource FilterToggleButton}" />
                            <Button
                                Margin="5,0"
                                Command="{Binding ClearFiltersCommand}"
                                Content="Clear"
                                Style="{StaticResource ModernSecondaryButton}" />
                        </StackPanel>
                    </Grid>

                    <!--  Filter Inputs  -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Search  -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="Search Number or Customer" />
                            <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <!--  From Date  -->
                        <StackPanel Grid.Column="1" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="From Date" />
                            <DatePicker
                                Margin="0,5,0,0"
                                SelectedDate="{Binding StartDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>

                        <!--  To Date  -->
                        <StackPanel Grid.Column="2" Margin="0,0,15,0">
                            <TextBlock Style="{StaticResource FilterLabelText}" Text="To Date" />
                            <DatePicker
                                Margin="0,5,0,0"
                                SelectedDate="{Binding EndDate}"
                                Style="{StaticResource CompactDatePickerStyle}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!--  Main Content (Grid + Side Panel)  -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Invoices Grid  -->
                <Border
                    Grid.Column="0"
                    Margin="5,10"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <TextBlock
                                Style="{StaticResource SectionHeaderText}"
                                Text="ðŸ“‹ Invoice List" />
                            <TextBlock
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Foreground="#7F8C8D"
                                Text="{Binding ResultsSummary}" />
                        </Grid>

                        <DataGrid
                            MaxHeight="600"
                            GridLinesVisibility="None"
                            ItemsSource="{Binding FilteredInvoices}"
                            SelectedItem="{Binding SelectedInvoice}"
                            SelectionMode="Single"
                            Style="{StaticResource ModernDataGridStyle}">

                            <DataGrid.RowStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridRow}" TargetType="DataGridRow">
                                    <Setter Property="Height" Value="40" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#2A4A7B" />
                                            <Setter Property="Foreground" Value="White" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1E3A5F" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}" TargetType="DataGridColumnHeader">
                                    <Setter Property="Foreground" Value="#FF4472C4" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Background" Value="#1E1E1E" />
                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <!--  Status  -->
                                <DataGridTemplateColumn Width="Auto" Header="Status">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border
                                                VerticalAlignment="Center"
                                                Background="{Binding Status, Converter={StaticResource StatusColorConverter}}"
                                                Style="{StaticResource TransactionStatusBadge}">
                                                <TextBlock
                                                    Foreground="Black"
                                                    Style="{StaticResource StatusBadgeText}"
                                                    Text="{Binding Status}" />
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  Number  -->
                                <DataGridTextColumn
                                    Binding="{Binding InvoiceNumber}"
                                    Width="Auto"
                                    Header="Invoice #"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="Foreground" Value="Gainsboro" />
                                            <Setter Property="FontWeight" Value="Medium" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Date  -->
                                <DataGridTextColumn
                                    Binding="{Binding InvoiceDate, StringFormat='MMM dd, yyyy'}"
                                    Header="Date"
                                    Width="Auto"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="Foreground" Value="Gainsboro" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Customer  -->
                                <DataGridTextColumn
                                    Width="Auto"
                                    Binding="{Binding Customer.CustomerName}"
                                    Header="Customer"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="Foreground" Value="Gainsboro" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!--  Amount  -->
                                <DataGridTextColumn
                                    Binding="{Binding TotalAmount, StringFormat=C}"
                                    Header="Total"
                                    Width="Auto"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="Foreground" Value="#27AE60" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!--  Side Detail Panel  -->
                <Border
                    Grid.Column="1"
                    MaxWidth="300"
                    Margin="3,10"
                    Style="{StaticResource ModernCardStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource SectionHeaderText}" Text="ðŸ“‹ Invoice Details" />

                        <!--  Selected Details  -->
                        <StackPanel Margin="0,10,0,0" Visibility="{Binding SelectedInvoice, Converter={StaticResource NullToVisibilityConverter}}">

                            <!--  Header  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailHeaderText}" Text="{Binding SelectedInvoice.InvoiceNumber}" />
                                    <TextBlock Style="{StaticResource DetailSubText}" Text="{Binding SelectedInvoice.InvoiceDate, StringFormat='MMM dd, yyyy'}" />
                                    <Border
                                        Margin="0,5,0,0"
                                        HorizontalAlignment="Left"
                                        Background="{Binding SelectedInvoice.Status, Converter={StaticResource StatusColorConverter}}"
                                        Style="{StaticResource TransactionStatusBadge}">
                                        <TextBlock Style="{StaticResource StatusBadgeText}" Text="{Binding SelectedInvoice.Status}" />
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!--  Customer  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Customer" />
                                    <TextBlock Style="{StaticResource DetailValueText}" Text="{Binding SelectedInvoice.Customer.CustomerName}" />
                                    <TextBlock Style="{StaticResource DetailValueText}" Text="{Binding SelectedInvoice.Customer.Email}" FontSize="12" Foreground="Gray" />
                                </StackPanel>
                            </Border>

                            <!--  Totals  -->
                            <Border Margin="0,0,0,10" Style="{StaticResource DetailInfoBorder}">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Summary" />
                                    <Grid Margin="0,2">
                                        <TextBlock Text="Total:" Foreground="Gray" />
                                        <TextBlock Text="{Binding SelectedInvoice.TotalAmount, StringFormat=C}" HorizontalAlignment="Right" FontWeight="Bold" Foreground="White" />
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!--  Actions  -->
                            <StackPanel Margin="0,10,0,0">
                                <Button
                                    Margin="0,0,0,5"
                                    Command="{Binding EditInvoiceCommand}"
                                    CommandParameter="{Binding SelectedInvoice}"
                                    Content="ðŸ“ Edit Invoice"
                                    Style="{StaticResource ModernSecondaryButton}" />

                                <Button
                                    Margin="0,0,0,5"
                                    Command="{Binding PostInvoiceCommand}"
                                    CommandParameter="{Binding SelectedInvoice}"
                                    Content="âœ… Post Invoice"
                                    Style="{StaticResource ModernSecondaryButton}"
                                    Visibility="{Binding SelectedInvoice.Status, Converter={StaticResource StatusToVisibilityConverter}}" />

                                <Button
                                    Command="{Binding DeleteInvoiceCommand}"
                                    CommandParameter="{Binding SelectedInvoice}"
                                    Content="ðŸ—‘ï¸ Delete Draft"
                                    Style="{StaticResource ModernSecondaryButton}"
                                    Visibility="{Binding SelectedInvoice.Status, Converter={StaticResource StatusToVisibilityConverter}}" />
                            </StackPanel>
                        </StackPanel>

                        <!--  Empty State  -->
                        <StackPanel
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Visibility="{Binding SelectedInvoice, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                            <TextBlock
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center"
                                FontSize="48"
                                Opacity="0.3"
                                Text="ðŸ“„" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{StaticResource DetailSubText}"
                                Text="Select an invoice to view details and actions" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</base:BaseAnimatedPage>