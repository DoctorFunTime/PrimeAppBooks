<base:BaseAnimatedPage
    x:Class="PrimeAppBooks.Views.Pages.AccountTransactionsPage"
    xmlns:base="clr-namespace:PrimeAppBooks.Views.Pages"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,20"
            Style="{StaticResource ModernCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource WelcomeTitleText}" Text="ðŸ“Š Account Transactions: " />
                        <TextBlock Style="{StaticResource WelcomeTitleText}" Text="{Binding SelectedAccount.AccountName}" Foreground="{StaticResource PrimaryBrush}" />
                    </StackPanel>
                    <TextBlock Style="{StaticResource WelcomeSubtitleText}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}Account Number: {0} | Type: {1}">
                                <Binding Path="SelectedAccount.AccountNumber" />
                                <Binding Path="SelectedAccount.AccountType" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <DatePicker
                        SelectedDate="{Binding StartDate}"
                        hc:InfoElement.Placeholder="Start Date"
                        Width="120"
                        Margin="0,0,10,0"
                        Style="{StaticResource CompactDatePickerStyle}" />
                    <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource PrimaryTextBrush}" />
                    <DatePicker
                        SelectedDate="{Binding EndDate}"
                        hc:InfoElement.Placeholder="End Date"
                        Width="120"
                        Margin="0,0,20,0"
                        Style="{StaticResource CompactDatePickerStyle}" />

                    <Button
                        Command="{Binding NavigateBackCommand}"
                        Content="â† Back"
                        Style="{StaticResource ModernSecondaryButton}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Transactions Grid -->
        <Border
            Grid.Row="1"
            Style="{StaticResource ModernCardStyle}">
            <DataGrid
                AutoGenerateColumns="False"
                HeadersVisibility="All"
                IsReadOnly="True"
                ItemsSource="{Binding Transactions}"
                Style="{StaticResource ModernDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding LineDate, StringFormat=d}"
                        Header="Date"
                        Width="100" />
                    <DataGridTextColumn
                        Binding="{Binding JournalEntry.JournalNumber}"
                        Header="Journal #"
                        Width="120" />
                    <DataGridTextColumn
                        Binding="{Binding Description}"
                        Header="Description"
                        Width="*" />
                    <DataGridTextColumn
                        Binding="{Binding Reference}"
                        Header="Reference"
                        Width="120" />
                    <DataGridTextColumn
                        Binding="{Binding DebitAmount, StringFormat=N2}"
                        Header="Debit"
                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Binding="{Binding CreditAmount, StringFormat=N2}"
                        Header="Credit"
                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Summary Footer -->
        <Border
            Grid.Row="2"
            Margin="0,20,0,0"
            Style="{StaticResource ModernCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Period Totals" Style="{StaticResource ActivityAmountText}" VerticalAlignment="Center" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,40,0">
                    <TextBlock Text="Total Debits: " Style="{StaticResource ActivityAmountText}" Opacity="0.7" />
                    <TextBlock Text="{Binding TotalDebits, StringFormat=N2}" Style="{StaticResource ActivityAmountText}" FontWeight="SemiBold" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,40,0">
                    <TextBlock Text="Total Credits: " Style="{StaticResource ActivityAmountText}" Opacity="0.7" />
                    <TextBlock Text="{Binding TotalCredits, StringFormat=N2}" Style="{StaticResource ActivityAmountText}" FontWeight="SemiBold" />
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Net Change: " Style="{StaticResource ActivityAmountText}" Opacity="0.7" />
                    <TextBlock Text="{Binding NetChange, StringFormat=N2}" Style="{StaticResource ActivityAmountText}" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <!--
        <Border
            Grid.RowSpan="3"
            Background="#80000000"
            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar
                    Width="100"
                    Height="100"
                    IsIndeterminate="True"
                    Style="{StaticResource MaterialDesignCircularProgressBar}" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource DetailValueText}"
                    Text="Loading Transactions..." />
            </StackPanel>
        </Border>-->
    </Grid>
</base:BaseAnimatedPage>