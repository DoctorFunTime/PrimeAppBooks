<base:BaseAnimatedPage
    x:Class="PrimeAppBooks.Views.Pages.AddCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:PrimeAppBooks.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:PrimeAppBooks.ViewModels.Pages"
    d:DataContext="{d:DesignInstance Type=pages:AddCustomerPageViewModel}"
    d:DesignHeight="900"
    d:DesignWidth="1280"
    Background="Transparent"
    mc:Ignorable="d">

    <ScrollViewer Style="{StaticResource ModernScrollViewer}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Margin="0,0,0,20" Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource WelcomeTitleText}" Text="{Binding PageTitle}" />
                        <TextBlock Style="{StaticResource WelcomeSubtitleText}" Text="Enter customer details and configure automated invoicing schedules" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button
                            Margin="5,0"
                            Command="{Binding NavigateBackCommand}"
                            Content="â† Back"
                            Style="{StaticResource ModernSecondaryButton}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Form -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Basic Information -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <Border Margin="0,0,0,20" Style="{StaticResource ModernCardStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Margin="0,0,0,15" Style="{StaticResource SectionHeaderText}" Text="Basic Information" />
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Customer Name *" />
                                    <hc:TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}" hc:InfoElement.Placeholder="Full legal name" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Customer Code" />
                                    <hc:TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding CustomerCode, UpdateSourceTrigger=PropertyChanged}" hc:InfoElement.Placeholder="Internal reference code" />
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Contact Person" />
                                    <hc:TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding ContactPerson}" hc:InfoElement.Placeholder="Primary contact" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Tax ID / VAT #" />
                                    <hc:TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding TaxId}" hc:InfoElement.Placeholder="Tax registration number" />
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Email Address" />
                                    <hc:TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding Email}" hc:InfoElement.Placeholder="example@company.com" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Phone Number" />
                                    <hc:TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding Phone}" hc:InfoElement.Placeholder="+1 (555) 000-0000" />
                                </StackPanel>
                            </Grid>

                            <StackPanel Margin="5">
                                <TextBlock Style="{StaticResource DetailLabelText}" Text="Default Revenue Account" />
                                <ComboBox 
                                    ItemsSource="{Binding RevenueAccounts}" 
                                    SelectedItem="{Binding SelectedRevenueAccount}" 
                                    DisplayMemberPath="AccountName"
                                    Style="{StaticResource ModernComboBox}" />
                                <TextBlock Text="Select the default account this customer's invoices will post to." Foreground="#60FFFFFF" FontSize="11" Margin="0,4,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Margin="0,0,0,15" Style="{StaticResource SectionHeaderText}" Text="Addresses &amp; Notes" />
                            
                            <StackPanel Margin="5">
                                <TextBlock Style="{StaticResource DetailLabelText}" Text="Billing Address" />
                                <hc:TextBox AcceptsReturn="True" Height="60" Style="{StaticResource ModernTextBoxStyle}" Text="{Binding BillingAddress}" TextWrapping="Wrap" />
                            </StackPanel>

                            <StackPanel Margin="5">
                                <TextBlock Style="{StaticResource DetailLabelText}" Text="Shipping Address" />
                                <hc:TextBox AcceptsReturn="True" Height="60" Style="{StaticResource ModernTextBoxStyle}" Text="{Binding ShippingAddress}" TextWrapping="Wrap" />
                            </StackPanel>

                            <StackPanel Margin="5">
                                <TextBlock Style="{StaticResource DetailLabelText}" Text="Additional Notes" />
                                <hc:TextBox AcceptsReturn="True" Height="60" Style="{StaticResource ModernTextBoxStyle}" Text="{Binding Notes}" TextWrapping="Wrap" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Configuration Side Panel -->
                <StackPanel Grid.Column="1">
                    <Border Margin="0,0,0,20" Style="{StaticResource ModernCardStyle}">
                        <StackPanel Margin="10">
                            <TextBlock Margin="0,0,0,15" Style="{StaticResource SectionHeaderText}" Text="âš™ï¸ Auto-Invoice Setup" />
                            
                            <CheckBox Margin="5" Content="Enable Automated Invoicing" IsChecked="{Binding IsAutoInvoiceEnabled}" Style="{StaticResource MaterialDesignCheckBox}" />
                            
                            <StackPanel IsEnabled="{Binding IsAutoInvoiceEnabled}">
                                <StackPanel Margin="5,15,5,5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Frequency" />
                                    <ComboBox ItemsSource="{Binding Frequencies}" SelectedItem="{Binding SelectedFrequency}" Style="{StaticResource ModernComboBox}" />
                                </StackPanel>

                                <StackPanel Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Every (Interval)" />
                                    <hc:TextBox Text="{Binding Interval}" Style="{StaticResource ModernTextBoxStyle}" />
                                </StackPanel>

                                <StackPanel Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Auto-Billing Amount" />
                                    <hc:TextBox Text="{Binding AutoInvoiceAmount}" Style="{StaticResource ModernTextBoxStyle}" hc:InfoElement.Placeholder="0.00" />
                                </StackPanel>

                                <StackPanel Margin="5">
                                    <TextBlock Style="{StaticResource DetailLabelText}" Text="Next Scheduled Date" />
                                    <DatePicker SelectedDate="{Binding NextInvoiceDate}" Style="{StaticResource CompactDatePickerStyle}" />
                                </StackPanel>
                                
                                <Border Margin="5,15,5,5" Padding="10" Background="#20FFFFFF" CornerRadius="4">
                                    <TextBlock Style="{StaticResource DetailValueText}" Text="This customer will be automatically invoiced based on these rules." TextWrapping="Wrap" Foreground="#95A5A6" FontSize="11" />
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel Margin="20">
                            <Button
                                Command="{Binding SaveCustomerCommand}"
                                Content="ðŸ’¾ Save Customer"
                                Style="{StaticResource ModernActionButton}" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Loading Overlay -->
            <Border
                Grid.RowSpan="2"
                Background="#80000000"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar
                        Width="80"
                        Height="80"
                        IsIndeterminate="True"
                        Style="{StaticResource MaterialDesignCircularProgressBar}" />
                    <TextBlock
                        Margin="0,15,0,0"
                        HorizontalAlignment="Center"
                        Style="{StaticResource DetailValueText}"
                        Text="Saving Customer..." />
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</base:BaseAnimatedPage>
