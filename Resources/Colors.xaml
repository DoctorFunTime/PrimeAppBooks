<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Color Resources  -->
    <Color x:Key="AccentColorTeal">#4ECDC4</Color>
    <Color x:Key="AccentColorBlue">#45B7D1</Color>
    <Color x:Key="AccentColorRed">#FF6B6B</Color>
    <Color x:Key="AccentColorPurple">#DDA0DD</Color>

    <Color x:Key="BackgroundDark1">#0A1F2E</Color>
    <Color x:Key="BackgroundDark2">#0E2333</Color>
    <Color x:Key="BackgroundDark3">#122738</Color>
    <Color x:Key="BackgroundDark4">#162B3C</Color>
    <Color x:Key="BackgroundDark5">#1A3042</Color>
    <Color x:Key="BackgroundDark6">#1C3244</Color>

    <!--  Solid Color Brushes  -->
    <SolidColorBrush x:Key="AccentBrushTeal" Color="{StaticResource AccentColorTeal}" />
    <SolidColorBrush x:Key="AccentBrushBlue" Color="{StaticResource AccentColorBlue}" />
    <SolidColorBrush x:Key="AccentBrushRed" Color="{StaticResource AccentColorRed}" />
    <SolidColorBrush x:Key="AccentBrushPurple" Color="{StaticResource AccentColorPurple}" />

    <SolidColorBrush x:Key="WhiteBrush" Color="White" />
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent" />

    <!--  Gradient Brushes  -->
    <LinearGradientBrush x:Key="BackgroundGradient1" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="{StaticResource BackgroundDark1}" />
        <GradientStop Offset="0.15" Color="{StaticResource BackgroundDark1}" />
        <GradientStop Offset="0.15" Color="{StaticResource BackgroundDark2}" />
        <GradientStop Offset="0.3" Color="{StaticResource BackgroundDark2}" />
        <GradientStop Offset="0.3" Color="{StaticResource BackgroundDark3}" />
        <GradientStop Offset="0.45" Color="{StaticResource BackgroundDark3}" />
        <GradientStop Offset="0.45" Color="{StaticResource BackgroundDark4}" />
        <GradientStop Offset="0.6" Color="{StaticResource BackgroundDark4}" />
        <GradientStop Offset="0.6" Color="{StaticResource BackgroundDark5}" />
        <GradientStop Offset="0.75" Color="{StaticResource BackgroundDark5}" />
        <GradientStop Offset="0.75" Color="{StaticResource BackgroundDark6}" />
        <GradientStop Offset="1" Color="{StaticResource BackgroundDark6}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundGradient2" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Offset="0" Color="{StaticResource BackgroundDark1}" />
        <GradientStop Offset="0.15" Color="{StaticResource BackgroundDark1}" />
        <GradientStop Offset="0.15" Color="#0C2131" />
        <GradientStop Offset="0.3" Color="#0C2131" />
        <GradientStop Offset="0.3" Color="#102536" />
        <GradientStop Offset="0.45" Color="#102536" />
        <GradientStop Offset="0.45" Color="#14293A" />
        <GradientStop Offset="0.6" Color="#14293A" />
        <GradientStop Offset="0.6" Color="#182D3E" />
        <GradientStop Offset="0.75" Color="#182D3E" />
        <GradientStop Offset="0.75" Color="{StaticResource BackgroundDark6}" />
        <GradientStop Offset="1" Color="{StaticResource BackgroundDark6}" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="TitleBarGradient" Opacity="0.8" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="#50FF6B6B" />
        <GradientStop Offset="0.5" Color="#304ECDC4" />
        <GradientStop Offset="1" Color="#5045B7D1" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="UserProfileGradient" Opacity="0.7">
        <GradientStop Offset="0" Color="#50FF6B6B" />
        <GradientStop Offset="0.7" Color="#304ECDC4" />
        <GradientStop Offset="1" Color="#2045B7D1" />
    </RadialGradientBrush>

    <LinearGradientBrush x:Key="UserAvatarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="{StaticResource AccentColorTeal}" />
        <GradientStop Offset="1" Color="{StaticResource AccentColorBlue}" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="AppIconGradient">
        <GradientStop Offset="0" Color="{StaticResource AccentColorRed}" />
        <GradientStop Offset="0.7" Color="{StaticResource AccentColorTeal}" />
        <GradientStop Offset="1" Color="{StaticResource AccentColorBlue}" />
    </RadialGradientBrush>

    <LinearGradientBrush x:Key="WelcomePanelGradient" Opacity="0.7" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Offset="0" Color="#30FFFFFF" />
        <GradientStop Offset="1" Color="#20FFFFFF" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundMaskGradient" StartPoint="0.2,0.2" EndPoint="0.8,0.8">
        <GradientStop Offset="0" Color="#00000000" />
        <GradientStop Offset="0.5" Color="#FFFFFFFF" />
        <GradientStop Offset="1" Color="#00000000" />
    </LinearGradientBrush>
</ResourceDictionary>