    <!-- HandyControl DatePicker Style -->
    <Style x:Key="ModernHandyDatePicker" TargetType="hc:DatePicker">
        <Setter Property="Background" Value="{StaticResource CardGradientBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource TextSecondaryBrush}" />
        <Setter Property="BorderThickness" Value="1" />
