<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:hc="https://handyorg.github.io/handycontrol">

    <Style x:Key="CompactDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignDatePicker}">
        <Setter Property="Width" Value="300" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Gainsboro" />
        <Setter Property="materialDesign:HintAssist.FontFamily" Value="Century Gothic" />
        <Setter Property="materialDesign:HintAssist.Foreground" Value="Gainsboro" />
        <Setter Property="materialDesign:HintAssist.Hint" Value="Select a date" />

        <!-- Text field styling -->
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Gainsboro" />
        <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="Gainsboro" />

        <!-- Calendar popup styling with embedded day button style -->
        <Setter Property="CalendarStyle">
            <Setter.Value>
                <Style TargetType="Calendar" BasedOn="{StaticResource MaterialDesignCalendarPortrait}">
                    <Setter Property="Foreground" Value="Gainsboro" />
                    <Setter Property="Background" Value="#FF2D2D30" />
                    <Setter Property="BorderBrush" Value="#FF6E6E6E" />

                    <!-- Style for calendar day buttons within the calendar -->
                    <Setter Property="CalendarDayButtonStyle">
                        <Setter.Value>
                            <Style TargetType="CalendarDayButton" BasedOn="{StaticResource MaterialDesignCalendarDayButton}">
                                <Setter Property="Foreground" Value="Gainsboro" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF4472C4" />
                                        <Setter Property="Foreground" Value="White" />
                                    </Trigger>
                                    <Trigger Property="IsToday" Value="True">
                                        <Setter Property="BorderBrush" Value="#FF4472C4" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>