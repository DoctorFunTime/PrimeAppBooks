<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hc="https://handyorg.github.io/handycontrol">

    <!-- Modern DatePicker Style -->
    <Style x:Key="ModernDatePickerStyle" TargetType="{x:Type DatePicker}">
        <Setter Property="Foreground" Value="#2C3E50" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#E1E8ED" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="IBeam" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DatePicker}">
                    <Grid>
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <Border.Effect>
                                <DropShadowEffect x:Name="ShadowEffect"
                                                  ShadowDepth="0"
                                                  BlurRadius="8"
                                                  Opacity="0"
                                                  Color="#3498DB" />
                            </Border.Effect>
                        </Border>

                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- DatePicker TextBox -->
                            <DatePickerTextBox x:Name="PART_TextBox"
                                               Grid.Column="0"
                                               Foreground="{TemplateBinding Foreground}"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                               HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                               FontFamily="{TemplateBinding FontFamily}"
                                               FontSize="{TemplateBinding FontSize}"
                                               FontWeight="{TemplateBinding FontWeight}"
                                               Focusable="{TemplateBinding Focusable}"
                                               IsReadOnly="False"
                                               IsHitTestVisible="True" />

                            <!-- Calendar Icon Button -->
                            <Button x:Name="PART_Button"
                                    Grid.Column="1"
                                    Width="32"
                                    Height="32"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Focusable="False"
                                    Margin="8,0,0,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                x:Name="IconBorder">
                                            <Path x:Name="CalendarIcon"
                                                  Width="16"
                                                  Height="16"
                                                  Stretch="Uniform"
                                                  Fill="#7F8C8D"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Data="M19,3H18V1H16V3H8V1H6V3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="IconBorder" Property="Background" Value="#ECF0F1" />
                                                <Setter TargetName="CalendarIcon" Property="Fill" Value="#3498DB" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="IconBorder" Property="Background" Value="#D5DBDB" />
                                                <Setter TargetName="CalendarIcon" Property="Fill" Value="#2980B9" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Placeholder Text -->
                            <TextBlock x:Name="PlaceholderText"
                                       Grid.Column="0"
                                       Text=""
                                       Foreground="#95A5A6"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       FontSize="{TemplateBinding FontSize}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       IsHitTestVisible="False"
                                       Opacity="0" />
                        </Grid>

                        <!-- Popup for Calendar -->
                        <Popup x:Name="PART_Popup"
                               AllowsTransparency="True"
                               Placement="Bottom"
                               PlacementTarget="{Binding ElementName=MainBorder}"
                               StaysOpen="False">
                            <Border Background="White"
                                    BorderBrush="#E1E8ED"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,4,0,0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2"
                                                      BlurRadius="12"
                                                      Opacity="0.15"
                                                      Color="Black" />
                                </Border.Effect>
                                <Calendar x:Name="PART_Calendar"
                                          Background="Transparent"
                                          BorderThickness="0" />
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Focus State -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsFocused" Value="True" />
                                <Condition Property="IsEnabled" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="#3498DB" />
                            <Setter TargetName="MainBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.3" Color="#3498DB" />
                                </Setter.Value>
                            </Setter>
                        </MultiTrigger>

                        <!-- Mouse Over State -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsEnabled" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="#52C4F0" />
                            <Setter TargetName="MainBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.2" Color="#3498DB" />
                                </Setter.Value>
                            </Setter>
                        </MultiTrigger>

                        <!-- Disabled State -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="MainBorder" Property="Background" Value="#F8F9FA" />
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="#E9ECEF" />
                            <Setter Property="Foreground" Value="#ADB5BD" />
                        </Trigger>

                        <!-- Show Placeholder -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Text" Value="" />
                                <Condition Property="IsKeyboardFocusWithin" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PlaceholderText" Property="Opacity" Value="1" />
                        </MultiTrigger>

                        <!-- Keyboard Focus Within -->
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush" Value="#3498DB" />
                            <Setter TargetName="MainBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Opacity="0.3" Color="#3498DB" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern Calendar Day Button Style -->
    <Style x:Key="ModernCalendarDayButtonStyle" TargetType="{x:Type CalendarDayButton}">
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                    <Border x:Name="ButtonBorder"
                            Background="Transparent"
                            BorderThickness="0"
                            CornerRadius="6">
                        <ContentPresenter x:Name="Content"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="0" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#E8F4FD" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#D6EAF8" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#3498DB" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsToday" Value="True">
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#3498DB" />
                            <Setter TargetName="ButtonBorder" Property="BorderThickness" Value="2" />
                        </Trigger>
                        <Trigger Property="IsBlackedOut" Value="True">
                            <Setter Property="Foreground" Value="#BDC3C7" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="IsToday" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#2980B9" />
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#2980B9" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Modern Calendar Button Style -->
    <Style x:Key="ModernCalendarButtonStyle" TargetType="{x:Type CalendarButton}">
        <Setter Property="Width" Value="60" />
        <Setter Property="Height" Value="42" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CalendarButton}">
                    <Border x:Name="ButtonBorder"
                            Background="Transparent"
                            BorderThickness="0"
                            CornerRadius="6">
                        <ContentPresenter x:Name="Content"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="0" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#E8F4FD" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#D6EAF8" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#3498DB" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Responsive Styles -->
    <Style x:Key="CompactDatePickerStyle" TargetType="{x:Type DatePicker}" BasedOn="{StaticResource ModernDatePickerStyle}">
        <Setter Property="Height" Value="40" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Padding" Value="10,8" />
    </Style>

    <Style x:Key="LargeDatePickerStyle" TargetType="{x:Type DatePicker}" BasedOn="{StaticResource ModernDatePickerStyle}">
        <Setter Property="Height" Value="52" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="16,12" />
    </Style>
</ResourceDictionary>